.trans {
  background: rgb(0, 0, 0);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 103;
}

.board {
  background: rgba(0, 0, 0, 0);
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: -100%;
  left: 0;
  z-index: 104;
}

.cur {
  color: #f23030 !important;
}

.cur-option {
  color: white;
  background: #f23030 !important;
}

.buy-bg {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  background: white;
}

.good-pic {
  position: absolute;
  left: 22rpx;
  top: -44rpx;
  width: 188rpx;
  height: 188rpx;
  border: 4rpx solid white;
}

.good-info {
  padding-left: 240rpx;
  padding-top: 30rpx;
  display: flex;
  align-items: flex-end;
}

.good-info .collage {
  height: 30rpx;
  overflow: hidden;
  display: inline-block;
  border: 2rpx solid #f23030;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.good-info .collage image {
  width: 28rpx;
  height: 30rpx;
  float: left;
}

.good-info .collage view {
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 0 6rpx;
  float: left;
  color: #f23030;
}

.good-info .unit {
  font-size: 24rpx;
}

.good-info .integer {
  font-size: 30rpx;
  line-height:34rpx;
}

.good-info .decimals {
  font-size: 24rpx;
}

.good-info .inventory {
  font-size: 28rpx;
  margin-left: 16rpx;
}

.good-size {
  margin-top: 10rpx;
  margin-left: 240rpx;
  font-size: 28rpx;
}

.close-bg {
  position: absolute;
  right: 30rpx;
  top: 26rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.good-property {
  font-size: 30rpx;
  width: 92%;
  margin: 50rpx auto 0;
  max-height: 500rpx;
  overflow: auto;
}

.good-property > view {
  border-bottom: 2rpx solid #f5f5f5;
}

.good-property .property-title {
  margin-top: 40rpx;
}

.good-property .property-option {
  overflow: hidden;
  margin-top: 30rpx;
}

.good-property .property-option > view {
  float: left;
  background: #f5f5f5;
  text-align: center;
  padding: 10rpx 28rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin-right: 24rpx;
  margin-bottom: 20rpx;
}

.buy-num {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 92%;
  margin: 0 auto;
  height: 136rpx;
}

.buy-num .left {
  font-size: 30rpx;
}

.buy-num .right {
  overflow: hidden;
  display: flex;
  align-items: center;
}

.buy-num .right > image {
  width: 88rpx;
  height: 70rpx;
}

.buy-num .right .num {
  font-size: 30rpx;
  width: 70rpx;
  text-align: center;
  margin: 0 30rpx;
}

.operation {
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}

.operation .add-cart {
  background: black;
  color: white;
  width: 50%;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
}

.operation .buy-now {
  background: #f23030;
  color: white;
  width: 50%;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
}

.operation .confirm {
  background: #f23030;
  color: white;
  width: 100%;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  float: left;
}
