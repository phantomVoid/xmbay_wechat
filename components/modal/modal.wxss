.board {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
}

.board > view {
  width: 540rpx;
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 40rpx;
  text-align: center;
}

.content {
  font-size: 30rpx;
  text-align: center;
  margin-top: 50rpx;
  padding: 0 20rpx;
  color: #8d8d8d;
}
.tip {
  font-size: 28rpx;
  text-align: center;
  padding: 0 20rpx;
  color: #8d8d8d;
}

.operation {
  width: 100%;
  height: 88rpx;
  overflow: hidden;
  margin-top: 60rpx;
  border-top: 2rpx solid #f5f5f5;
}

.operation > view {
  float: left;
  width: 50%;
  font-size: 30rpx;
  line-height: 88rpx;
  text-align: center;
}

.operation > view:first-child {
  background: #f23020;
  color: white;
}
