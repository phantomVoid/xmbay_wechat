.wrap {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: black;
}

.swiper-head {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.swiper-head video {
  width: 100%;
  height: 100%;
}

.swiper .video-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper .video-wrap > image {
  width: 84rpx;
  height: 84rpx;
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.banner-num {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: white;
  width: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50rpx;
}

.banner-num text:first-child {
  font-size: 30rpx;
}

.banner-num text:last-child {
  font-size: 26rpx;
}
