.board {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.board > view {
  position: relative;
  width: 532rpx;
  height: 506rpx;
  border-radius: 10rpx;
  background: white;
}

.board > view .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  top: -53rpx;
  left: 50%;
  margin-left: -53rpx;
  background-color: #fff;
  border: 6rpx solid white;
}

.board > view .close {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.board > view .bargain-info {
  font-size: 36rpx;
  text-align: center;
  margin-top: 90rpx;
}

.board > view .logo {
  width: 224rpx;
  height: 224rpx;
  display: block;
  margin: 0 auto;
}

.board > view .know {
  width: 438rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  background: #f20230;
  color: white;
  margin: 20rpx auto 0;
  text-align: center;
  border-radius: 10rpx;
}

.cur {
  color: #f20230;
}
