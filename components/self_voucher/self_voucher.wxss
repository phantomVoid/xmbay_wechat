.board {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center;
}

.board > view {
  width: 600rpx;
}

.voucher-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 30rpx;
  background: #f5f5f5;
}

.voucher-head .head-left view {
  font-size: 30rpx;
  line-height: 90rpx;
}

.voucher-head .head-left {
  display: flex;
  align-items: center;
}

.voucher-head .head-left image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.voucher-head > image {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx 0;
}

.voucher-content {
  background: white;
  border-top: 2rpx solid white;
  border-bottom: 2rpx solid white;
}

.voucher-content .bar-code {
  width: 500rpx;
  height: 110rpx;
  display: block;
  margin: 0 auto;
  margin-top: 36rpx;
}

.voucher-content > view {
  font-size: 28rpx;
  line-height: 28rpx;
  margin-top: 24rpx;
  text-align: center;
}

.voucher-content .qr-code {
  width: 286rpx;
  height: 286rpx;
  display: block;
  margin: 0 auto;
  margin-top: 38rpx;
}

.cut-line {
  width: 100%;
  height: 50rpx;
  display: block;
}

.voucher-info {
  background: #f5f5f5;
  padding: 0 46rpx 60rpx;
}

.voucher-info text {
  color: #8d8d8d;
  font-size: 26rpx;
}

.voucher-info .title {
  color: black !important;
}
