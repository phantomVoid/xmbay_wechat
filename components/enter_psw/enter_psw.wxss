.trans {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 14;
  width: 100%;
  height: 100%;
  background: #000;
}

.board {
  position: fixed;
  left: 0;
  bottom: -100%;
  z-index: 20;
  width: 100%;
  height: 100%;
  transition: all 0.5s ease;
}

.board > view {
  width: 664rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  padding-bottom: 30rpx;
  margin-top: 60rpx;
  background: #f4f4f4;
}

.board .head {
  position: relative;
  width: 100%;
  font-size: 32rpx;
  line-height: 106rpx;
  text-align: center;
  border-bottom: 1px solid #d4d4d4;
}

.board .head image {
  position: absolute;
  right: 10rpx;
  top: 50%;
  width: 28rpx;
  height: 28rpx;
  padding: 12rpx;
  margin-top: -24rpx;
}

.content-title {
  margin-top: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.money {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 20rpx;
}

.enter {
  position: relative;
  width: 610rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  margin-top: 30rpx;
  overflow: hidden;
  border: 1px solid #d8d8d8;
}

.enter > input {
  position: fixed;
  top: -100vh;
  left: -100vw;
}

.enter > view {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: white;
}

.enter > view .num {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 16.66%;
  height: 100%;
  float: left;
}

.enter > view .num::after {
  position: absolute;
  right: 0;
  top: 0;
  content: '';
  width: 2rpx;
  height: 100%;
  background: #f0f0f0;
}

.enter > view .num:last-child::after {
  width: 0;
}

.enter > view .num .dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 10rpx;
  background: #333;
}

.psw-btn{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  width: 610rpx;
  margin: 30rpx auto 0;
  color: #666;
}