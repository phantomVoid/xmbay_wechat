.trans {
  background: rgb(0, 0, 0);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 14;
}

.board {
  position: fixed;
  left: 0;
  bottom: -100%;
  width: 100%;
  height: 100%;
  transition: all 0.5s ease;
  z-index: 20;
}

.board > view {
  width: 664rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  background: #f4f4f4;
  padding-bottom: 30rpx;
  margin-top: 60rpx;
}

.board .head {
  width: 100%;
  font-size: 32rpx;
  line-height: 106rpx;
  text-align: center;
  position: relative;
  border-bottom: 2rpx solid #d4d4d4;
}

.board .head image {
  width: 28rpx;
  height: 28rpx;
  padding: 12rpx;
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -20rpx;
}

.content-title {
  margin-top: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.money {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 20rpx;
}

.enter {
  width: 610rpx;
  margin: 0 auto;
  height: 100rpx;
  border: 2rpx solid #d8d8d8;
  border-radius: 8rpx;
  position: relative;
  margin-top: 30rpx;
}

.enter > input {
  position: fixed;
  top: -100vh;
  left: -100vw;
}

.enter > view {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 2;
  background: white;
  overflow: hidden;
}

.enter > view .num {
  width: 16.66%;
  float: left;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.enter > view .num::after {
  position: absolute;
  right: 0;
  top: 0;
  content: '';
  width: 2rpx;
  height: 100%;
  background: #f0f0f0;
}

.enter > view .num:last-child::after {
  width: 0;
}

.enter > view .num .dot {
  width: 16rpx;
  height: 16rpx;
  background: #333;
  border-radius: 10rpx;
}

.psw-btn {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  width: 610rpx;
  margin: 30rpx auto 0;
  color: #666;
}
