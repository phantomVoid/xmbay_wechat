/* components/navBar/navBar.wxss */

.tabBar .icon {
  width: 42rpx;
  height: 42rpx;
  display: block;
}

.tabBar {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #8a8a8a;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgba(218, 218, 218, 0.5);
  background: #fff;
}

.tabBar-item {
  flex: 1;
  text-align: center;
  overflow: hidden;
}

.tabBar-item .box {
  display: flex;
  justify-content: center;
  padding-bottom: 6rpx;
}
