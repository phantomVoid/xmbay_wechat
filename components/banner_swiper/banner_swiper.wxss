/* components/banner_swiper/banner_swiper.wxss */
._warp .p-banner{
  width: 100%;
  height: 350rpx;
  padding-top: 50rpx;
  padding: 50rpx 20rpx 0;
  box-sizing: border-box;
  float: left;
}
._warp .p-banner .imgwarp{
  position: relative;
  width: 100%;
  height: 300rpx;
  transition: all .5s;
}
._warp .p-banner .imgwarp>image{
  position: absolute;
  left: 0;
  top: 0;
  width: 286rpx;
  height: 286rpx;
  background-color: #f9f9f9;
  box-shadow: 10rpx 0 20rpx 0rpx rgba(110, 110, 110, 0.1);
  border-radius: 10rpx;
  border: 1px solid rgba(221, 221, 221, 0.1);
  transition: all .5s;
  opacity: 1;
}
._warp .p-banner-warp{
  width: 27%;
  height: 350rpx;
  padding-top: 50rpx;
  
  padding-right: 20rpx;
  float: left;
  box-sizing: border-box;
}
._warp .p-banner-warp .goods_name{
  font-size: 28rpx;
  color: #333;
  /* margin-top: 70rpx; */
}
._warp .p-banner-warp .goods_tip{
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

._warp .p-banner-c{
  position: relative;
  width: 100%;
  float: left;
}
._warp .p-banner-c .circle{
  display: flex;
  justify-content: center;
}
._warp .p-banner-c .circle>view{
  width: 10rpx;
  height: 10rpx;
  margin: 0 8rpx;
  border-radius: 50%;
  border: 3rpx solid #999;
}
._warp .p-banner-c .xl{
  position: absolute;
  right: 28rpx;
  top: -16rpx;
  font-size: 24rpx;
  color: #ccc;
}