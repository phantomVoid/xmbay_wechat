.trans {
  background: rgb(0, 0, 0);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 13;
}

.board {
  background: rgba(0, 0, 0, 0);
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: -100%;
  left: 0;
  z-index: 14;
}

.board > view {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: white;
}

.pay-way {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.pay-way view {
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  margin-left: 28rpx;
  margin-top: 40rpx;
}

.pay-way image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 26rpx;
  margin-top: 36rpx;
  display: block;
}

.scrolly {
  height: 900rpx;
  white-space: nowrap;
  margin-top: 40rpx;
}

.scrolly .item {
  border-bottom: 1rpx solid #e5e5e5;
  margin-top: 40rpx;
}

.scrollx {
  width: 700rpx;
  margin: 0 auto;
  white-space: nowrap;
}

.scrolly .item:first-child {
  margin-top: 0!important;
}

.good-image {
  width: 134rpx;
  height: 134rpx;
  display: inline-block;
  margin-left: 10rpx;
}

.good-image:first-child {
  margin-left: 0;
}

.choose-way {
  overflow: hidden;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.choose-way > view {
  font-size: 26rpx;
  line-height: 60rpx;
  float: left;
  border: 2rpx solid #e5e5e5;
  width: 166rpx;
  text-align: center;
  /* box-shadow: 1rpx 1rpx 1rpx 1rpx #e0e0e0; */
  margin-left: 26rpx;
}

