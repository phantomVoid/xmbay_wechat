@import "/utils/iconfont.wxss";
.placeholder-goods{
  position: absolute;
  left: 0;
}
.good-list {
  overflow: hidden;
  margin-top: 0rpx;
  background: #f6f6f6;
}
.good-list-one{
  margin-top: 10rpx;
}

.good-list > view {
  position: relative;
  width: 49.5%;
  height: 560rpx;
  margin-top: 10rpx;
  float: left;
  background: white;
}

.good-list-one > view {
  margin: auto;
}

.good-list > view:nth-child(2n) {
  margin-left: 1%;
}

.good-list .pic-wrap {
  position: relative;
}

.good-list .good-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good-list .good-detail .goods-info{
  flex: 1;
}
.good-list-one .good-detail .goods-info{
  margin-top: 20rpx;
}

.good-list .pic {
  width: 100%;
  height: 372rpx;
  display: block;
}

.good-list .good-name {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 15rpx;
  margin-top: 10rpx;
}
.good-tips-con{
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
}
.good-list-one .good-tips-con{
  padding: 0;
}
.good-list .good-tips-list {
  display: block;
  height: 60rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
}

.good-list-one .good-tips-list {
  display: flex;
  align-items: baseline;
  height: auto;
  padding: 0;
}

.good-list .good-group-info {
  display: flex;
  align-items: flex-end;
  margin-top: 6rpx;
}

.good-list .good-group-info .bg {
  width: 76rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 20rpx;
  border-radius: 20rpx 0 20rpx 20rpx;
  /* margin-left: 14rpx; */
  margin-right: 10rpx;
  color: white;
}
.price-con{
  display: flex;
  align-items: baseline;
}
.good-list .good-group-info .cur {
  line-height: 1;
  margin-top: 22rpx;
}

.good-list .good-group-one {
  font-size: 22rpx;
  /* line-height: 22rpx;
  margin-top: 20rpx; */
  /* margin-left: 14rpx; */
  color: #8d8d8d;
}
.good-list-one .good-group-one {
  /* font-size: 22rpx; */
  /* line-height: 22rpx;
  margin-top: 20rpx; */
  margin-left: 14rpx;
  /* color: #8d8d8d; */
}

.good-list .good-group-one text:last-child {
  text-decoration: line-through;
}

.good-list .base-price {
  display: flex;
  align-items:baseline;
}

.good-list .base-price .base-title {
  font-size: 24rpx;
  /* margin-left: 14rpx; */
}

.good-list .good-tips {
  flex-shrink: 0;
  display: inline-block;
  font-size: 22rpx;
  line-height: 30rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  padding: 0 4rpx;
  border: 1px solid transparent;
}

.good-list .label{
  flex: 1;
  height: 60rpx;
  overflow: hidden;
}
.good-list .label view{
  display: inline-block;
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 0 4rpx;
  margin-right: 10rpx;
  border: 1px solid transparent;
  border-radius: 8rpx;
}


.good-list .price {
  margin-left: 14rpx;
  margin-top: 14rpx;
}

.good-list .price .unit {
  font-size: 26rpx;
}

.good-list .price .integer {
  font-size: 32rpx;
}

.good-list .price .decimals {
  font-size: 26rpx;
}

.good-list .dy {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 95rpx;
  height: 48rpx;
}

.good-list .sale-num {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 26rpx;
  line-height: 34rpx;
  padding: 0 12rpx;
  background: rgba(0, 0, 0, 0.3);
  color: white;
}

.good-list .add-cart {
  position: absolute;
  right: 10rpx;
  bottom: -2rpx;
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  padding: 5rpx;
  margin: 10rpx;
  border-radius: 50%;
  font-size: 38rpx;
  border: 1px solid #f2f2f2;
}
.good-list-one .add-cart {
  bottom: 16rpx;
}

.good-list .shop {
  display: none;
}

