.trans {
  background: rgb(0, 0, 0);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 13;
}

.board {
  background: rgba(0, 0, 0, 0);
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: -100%;
  left: 0;
  z-index: 14;
}

.cur {
  color: #f23030;
}

.good-coupon {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 50rpx 50rpx 0 0;
  z-index: 3;
}

.good-coupon .coupon-head {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 120rpx;
  text-align: center;
}

.coupon-scroll {
  height: 720rpx;
}

.coupon {
  width: 706rpx;
  height: 206rpx;
  margin: 26rpx auto 0;
  position: relative;
  box-shadow: 0px 2rpx 4rpx #e0e0e0;
}


.coupon:first-child{
  margin: 0 auto;
}

.coupon > image {
  width: 100%;
  height: 100%;
}

.coupon > .coupon-con {
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
}

.coupon .coupon-left {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 100%;
}

.coupon .coupon-price {
  text-align: center;
  color: white;
  font-weight: bold;
}

.coupon .coupon-price text:first-child {
  font-size: 32rpx;
}

.coupon .coupon-price text:last-child {
  font-size: 60rpx;
}

.coupon .coupon-used {
  font-size: 26rpx;
  color: white;
}

.coupon .coupon-right {
  margin-left: 40rpx;
}

.coupon .coupon-right .coupon-title {
  width: 300rpx;
  font-size: 28rpx;
  height: 76rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 36rpx;
}

.coupon .coupon-right .coupon-tip {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.coupon .coupon-right .coupon-time {
  font-size: 24rpx;
  color: #8d8d8d;
}

.coupon .choose-logo {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -20rpx;
}

.good-coupon .coupon-finish {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  background: #f23030;
  color: white;
  text-align: center;
}
