.poster {
  position: absolute;
  left: -375px;
  top: 0;
  width: 375px;
  height: 667px;
}

.trans {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 13;
  width: 100%;
  height: 100%;
  background: rgb(0, 0, 0);
}

.board {
  position: fixed;
  bottom: -100%;
  left: 0;
  z-index: 60;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
}

.cur {
  color: #f23030 !important;
}

.board > view {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: white;
}

.share-title {
  font-size: 28rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
  background: #f0f0f0;
}

.share-poster {
  width: 323rpx;
  height: 560rpx;
  display: block;
  margin: 20rpx auto;
  box-shadow: 0px 0px 5px #888;
}

.save {
  width: 95%;
  margin: 0 auto;
  font-size: 28rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 8rpx;
  color: white;
  background: #f23030;
}

.tips {
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}
