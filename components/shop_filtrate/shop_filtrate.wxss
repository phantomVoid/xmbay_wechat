.filtrate-board {
  z-index: 14 !important;
  left: 100% !important;
  transition: all 0.5s ease;
}

.filtrate-board-anim {
  left: 0 !important;
  transition: all 0.5s ease;
}

.trans {
  background: rgb(0, 0, 0);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 14;
}

.board {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.board .content {
  width: 90%;
  left: 10%;
  top: 0;
  height: 100%;
  background: white;
  position: absolute;
  overflow: hidden;
}

.board .content > view {
  background: #f6f6f6;
}

.board .content .footer {
  width: 100%;
  height: 90rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  overflow: hidden;
  border-top: 2rpx solid #eaeaea;
  z-index: 110;
  background: white;
}

.board .content .footer > view {
  width: 100%;
  float: left;
  text-align: center;
  font-size: 28rpx;
  line-height: 90rpx;
  background: #f23030;
  color: white;
}

.filtrate-item {
  height: 92rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  background: white;
}

.filtrate-head {
  margin: 14rpx 0;
}

.filtrate-item .title {
  margin-left: 34rpx;
}

.filtrate-item .number {
  color: #8d8d8d;
  margin-left: 360rpx;
}

.filtrate-item image {
  width: 28rpx;
  height: 20rpx;
  margin-left: 30rpx;
}

.block {
  height: 100rpx;
}
