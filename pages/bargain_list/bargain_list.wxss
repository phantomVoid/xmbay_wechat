page {
  background: white;
}
.wrap{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: calc(100vh - 100rpx);
}

.logo {
  width: 100%;
  height: 320rpx;
  display: block;
}

.bargain-list {
  padding-bottom: 102rpx;
}

.bargain-item {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.bargain-item .goods-img {
  width: 260rpx;
  height: 260rpx;
  flex-shrink: 0;
}
.bargain-item .goods-img image{
  width: 260rpx;
  height: 260rpx;
}

.bargain-item .goods-info {
  height: 272rpx;
  margin: 0 24rpx;
  flex: 1;
  border-bottom: 1px solid #f0f0f0;
}

.bargain-name {
  font-size: 30rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
}

.bargain-time {
  font-size: 24rpx;
  color: #8d8d8d;
}

.bargain-operation {
  overflow: hidden;
  margin-top: 60rpx;
}

.bargain-operation .bargain-price {
  float: left;
  font-size: 24rpx;
  line-height: 1;
}

.bargain-operation .bargain-price .origin-price {
  color: #8d8d8d;
  text-decoration: line-through;
  margin-top: 12rpx;
}

.bargain-operation .bargain-now {
  width: 168rpx;
  height: 60rpx;
  border-radius: 8rpx;
  float: right;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color: white;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  box-sizing: border-box;
  background: white;
  /* border-top: 1px solid #f0f0f0; */
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
}

.footer > view {
  width: 50%;
  height: 100%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer > view .title {
  font-size: 32rpx;
  margin-left: 20rpx;
  color: #6e7479;
}

.footer > view .shop-icon {
  font-size: 50rpx;
}

.footer > view .mykj-icon {
  font-size: 50rpx;
  color: #6e7479;
}

.no-order {
  margin-top: 170rpx;
  display: flex;
}

.no-order > view {
  width: 100%;
}

.no-order image {
  width: 100%;
  height: 260rpx;
}

.no-order .no-order-head {
  font-size: 30rpx;
  text-align: center;
}

.no-order .no-order-content {
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #8d8d8d;
}