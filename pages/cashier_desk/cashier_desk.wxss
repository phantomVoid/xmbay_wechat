.pay-head {
  margin-top: 2rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: right;
  background: #fafafa;
  padding-right: 20rpx;
}

.pay-way-head {
  font-size: 28rpx;
  line-height: 88rpx;
  padding-left: 4%;
  background: white;
  margin-top: 10rpx;
}

.pay-way {
  padding: 0 4%;
  width: 92%;
  background: white;
}

.pay-way > view {
  position: relative;
  display: flex;
  align-items: center;
  height: 122rpx;
  line-height: 122rpx;
  font-size: 30rpx;
}

.pay-way .logo {
  width: 48rpx;
  height: 48rpx;
}

.pay-way .check {
  font-size: 48rpx;
  color: #9ea3a9;
}

.pay-way > view text {
  margin-left: 25rpx;
  flex: 1;
}

.submit {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  color: white;
}
