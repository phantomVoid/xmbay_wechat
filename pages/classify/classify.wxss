page {
  background: white;
}
.wrap-search{
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.wrap-search .search-con{
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
  background-color: #f6f6f6;
}
.wrap-search .search-icon{
  font-size: 36rpx;
  color: #bfc5ca;
}
.wrap-search .search-title{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #bfc5ca;
}
.wrap-search .scan{
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 64rpx;
  height: 64rpx;
  font-size: 46rpx;
  color: #393b3d;
}
.wrap-search .msg{
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 64rpx;
  height: 64rpx;
  font-size: 46rpx;
  color: #393b3d;
}
.wrap-search .msg .msg-num{
  position: absolute;
  right: -12rpx;
  top: -8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  font-size: 26rpx;
  border-radius: 50%;
  color: #fff;
}


.warp {
  position: relative;
  height: calc(100vh - 200rpx);
}

.classify {
  overflow: hidden;
}

.left-classify {
  position: absolute;
  top: 0;
  left: 0;
  width: 24%;
  height: 100%;
  overflow: auto;
  background-color: #f6f6f6;
}

.left-classify > view {
  position: relative;
  width: calc(100%-30rpx);
  font-size: 26rpx;
  line-height: 36rpx;
  padding: 29rpx 0rpx;
  text-align: center;
  border-left: 6rpx solid transparent;
  box-sizing: border-box;
  color: #202224;
}
.left-classify > view::after{
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #fff;
}

