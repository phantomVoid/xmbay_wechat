.logistics-wrap {
  padding-left: 20rpx;
  background: white;
}

.logistics-info {
  height: 100rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #f5f5f5;
}

.return-way {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.return-detail {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}

.return-detail > view {
  font-size: 26rpx;
  line-height: 54rpx;
  padding: 0 10rpx;
  margin-right: 16rpx;
  border-radius: 6rpx;
  border: 1px solid #d3d8dd;
}

.company {
  margin-top: 16rpx;
}

.logistics-info > view {
  font-size: 28rpx;
  line-height: 100rpx;
  float: left;
}

.logistics-wrap input {
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  margin-left: 38rpx;
}

.logistics-info .next {
  position: absolute;
  width: 12rpx;
  height: 22rpx;
  right: 26rpx;
  top: 50%;
  margin-top: -11rpx;
}

.logistics-info .scan {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  right: 26rpx;
  top: 50%;
  margin-top: -19rpx;
}

.upload-wrap {
  background: white;
  padding-left: 24rpx;
  padding-bottom: 40rpx;
  margin-top: 16rpx;
}

.upload-wrap .head {
  font-size: 28rpx;
  line-height: 86rpx;
}

.upload-wrap .pic-list {
  overflow: hidden;
}

.upload-wrap .pic-list > view {
  width: 168rpx;
  height: 168rpx;
  margin-right: 28rpx;
  position: relative;
  float: left;
  padding-right: 20rpx;
  padding-top: 20rpx;
}

.upload-wrap .pic-list .pic {
  width: 100%;
  height: 100%;
}

.upload-wrap .pic-list .delete {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.commit {
  width: 100%;
  line-height: 90rpx;
  font-size: 30rpx;
  color: white;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
