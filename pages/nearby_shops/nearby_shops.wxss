.topbanner{
  height: 812rpx;
}

.warp-con{
  padding-bottom: 130rpx;
}

.wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
}
.shops-search{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 90rpx;
}

.shops-search .search-con{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 70%;
  border-radius: 50px 50px;
  font-size: 26rpx;
  color: #f6f6f6;
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 1rpx 30rpx 0 rgba(188, 188, 188, 0.1);
}
.search-con .s-title{
  margin-left: 10rpx;
}

.find-shop {
  position: relative;
  width: 100%;
  height: 740rpx;
}
.h-title-img{
  position: relative;
  background-color: #fff;
}
.h-title-img .search{
  position: absolute;
  top: 50%;
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
  font-weight: bold;
}
.back-banner {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
  width: 100%;
  height: 100%;
  filter: blur(20px);
}
.slide_bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 190rpx;
  z-index: -1;
}

.back-banner image {
  width: 100%;
  height: 100%;
}

.find-shop > view {
  position: relative;
}

.find-shop .find-head {
  z-index: 1;
}

.find-shop .find-head .title {
  display: flex;
  align-items: center;
}

.find-shop .find-head .title > view {
  margin: 0 36rpx;
  font-size: 34rpx;
  line-height: 88rpx;
  color: white;
}

.find-shop .find-head text {
  width: 54rpx;
  height: 4rpx;
  background: white;
}

.find-shop .find-head .title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.find-shop .find-head .more {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 26rpx;
  line-height: 88rpx;
  padding: 0 10rpx;
  color: white;
}

.banner {
  width: 100%;
  height: 526rpx;
}

.banner .banner-item {
  height: 100%;
  position: relative;
  transform: scale(0.98);
  transition: all 0.3s ease;
  background: white;
  box-shadow: 0 0 10px 2rpx rgba(0, 0, 0, 0.4);
}

.banner .scale {
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.banner .banner-item .banner-pic {
  width: 100%;
  height: 430rpx;
  display: block;
}
.banner .banner-item .banner-pic >image{
  width: 100%;
  height: 100%;
}

.banner .banner-item .banner-avatar {
  position: absolute;
  top: 396rpx;
  left: 50%;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: -35rpx;
}
.banner .banner-item .banner-avatar image{
  width: 100%;
  height: 100%;
}

.banner .banner-item .banner-name {
  font-size: 28rpx;
  margin-top: 46rpx;
  text-align: center;
}

.nearby-title {
  width: 100%;
  height: 80rpx;
  display: block;
}

.list-title {
  position: relative;
  z-index: 3;
  width: 100%;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 80rpx;
  background: #fff;
  border-top: 1px solid #f6f6f6;
}

.fixed {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  transition: all 0.1s ease;
  -webkit-transform: translateZ(0);
}

.list-title .list {
  width: 75%;
  float: left;
  overflow: hidden;
}

.list-title .list .title {
  width: 33.3%;
  font-size: 30rpx;
  float: left;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.list-title .list .title view {
  width: 20rpx;
}

.list-title .choose {
  width: 25%;
  line-height: 80rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  float: left;
  position: relative;
}
.list-title .choose .choose-icon {
  font-size: 26rpx;
  line-height: 78rpx;
  margin-left: 6rpx;
}
/* .list-title .choose image {
  width: 18rpx;
  height: 18rpx;
  margin-left: 6rpx;
} */

.caret {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 4rpx;
  vertical-align: middle;
  border-top: 8rpx solid rgb(174, 174, 174);
  border-right: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  float: left;
}

.caret.up {
  transform: rotate(180deg);
  margin-bottom: 2px;
}

.cur-bg {
  border-top: 8rpx solid transparent;
}

.shop-list {
  padding-bottom: 20rpx;
}

.shop-list > view {
  width: 96%;
  margin: 20rpx auto 0;
  background: white;
}

.shop-list .shop-intro {
  margin-left: 20rpx;
}

.shop-head {
  padding: 30rpx 2%;
  width: 96%;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
}

.shop-head .shop-logo {
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #f6f6f6;
  background-color: #f6f6f6;
}

.shop-head .shop-logo image {
  width: 100%;
  height: 100%;
}

.shop-head .shop-name {
  font-size: 30rpx;
}

.shop-head .shop-attention {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 8rpx;
  color: #767b80;
}
.shop-head .shop-attention image{
  width: 112rpx;
  height: 32rpx;
  margin-left:10rpx;
}

.shop-head .go-shop {
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 100rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  border: 1px solid transparent;
  text-align: center;
  border-radius: 8rpx;
  margin-top: -20rpx;
}

.shop-pic {
  width: 96%;
  padding: 25rpx 2% 0;
  overflow: hidden;
  
}

.shop-pic > view {
  position: relative;
  width: 32%;
  margin-left: 2%;
  height: 214rpx;
  float: left;
}

.shop-pic > view:first-child {
  margin-left: 0;
}

.shop-pic > view image {
  width: 100%;
  height: 100%;
}

.shop-pic > view text {
  position: absolute;
  right: 0;
  bottom: 0;
  /* width: 110rpx; */
  text-align: center;
  font-size: 24rpx;
  line-height: 36rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  padding:2rpx 10rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
}

.shop-tips {
  overflow: hidden;
  padding: 25rpx 2% 0 0;
}

.shop-tips .shop-distance {
  float: right;
  font-size: 26rpx;
  line-height: 32rpx;
  margin-right: 30rpx;
  color: #767b80;
}

.shop-tips image {
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-right: 10rpx;
}

.shop-tips .dh {
  float: right;
  font-size: 26rpx;
  line-height: 32rpx;
  overflow: hidden;
  padding-bottom: 10rpx;
  color: #238cee;
}

.all-board, .nearby-board, .sort-board {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
}

.board-first {
  margin-top: 80rpx;
  height: 516rpx;
  background: white;
}

.board-classify {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.board-classify > view {
  font-size: 28rpx;
  line-height: 86rpx;
  padding: 0 50rpx;
  color: #6b7176;
}