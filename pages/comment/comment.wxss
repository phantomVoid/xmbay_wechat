.good-star {
  height: 114rpx;
  display: flex;
  align-items: center;
  background: white;
  border-bottom: 2rpx solid #f5f5f5;
}

.good-star > image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 24rpx;
}

.good-star view {
  font-size: 28rpx;
  margin-left: 28rpx;
}

.good-star text {
  color: #8d8d8d;
}

.leave-message {
  padding: 26rpx;
  background: white;
}

.leave-message textarea {
  width: 100%;
  font-size: 30rpx;
  height: 120rpx;
}

.upload-wrap {
  background: white;
  padding-left: 24rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.upload-wrap .head {
  font-size: 28rpx;
  line-height: 86rpx;
}

.upload-wrap .pic-list {
  overflow: hidden;
}

.upload-wrap .pic-list > view {
  width: 168rpx;
  height: 168rpx;
  margin-right: 28rpx;
  position: relative;
  float: left;
  padding-right: 20rpx;
  padding-top: 36rpx;
}


.upload-wrap .pic-list .video .play{
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -50rpx;
  margin-top: -28rpx;
}

.upload-wrap .pic-list .pic {
  width: 100%;
  height: 100%;
}

.upload-wrap .pic-list .delete {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 0;
  top: 14rpx;
}

.upload-wrap .pic-list .try {
  width: 144rpx;
  height: 58rpx;
  position: absolute;
  top: 0rpx;
  right: 32rpx;
}
.upload-wrap .pic-list .try text{
  font-size: 25rpx;
  color: #fff;
  position: absolute;
  top: 4rpx;
  left: 24rpx;
  z-index: 5;
}

.anonymity-wrap {
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
}

.anonymity-wrap > view {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin-right: 24rpx;
  color: #8d8d8d;
}

.anonymity-wrap > view view {
  font-size: 30rpx;
  line-height: 106rpx;
  margin-left: 30rpx;
  color: black;
}

.anonymity-wrap .imager {
  font-size: 40rpx;
}

.give-grade {
  height: 106rpx;
  display: flex;
  align-items: center;
  background: white;
  margin-top: 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.give-grade .logo {
  width: 40rpx;
  height: 40rpx;
  margin-left: 24rpx;
}

.give-grade view {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.commit {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  color: white;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
}
