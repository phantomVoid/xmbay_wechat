.wrap .head{
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 370rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.wrap .head .head-set{
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  width: 100%;
  height: 100rpx;
}
.wrap .head .head-set .set-con{
  display: flex;
}
.wrap .head .head-set .set-btn{
  position: relative;
  width: 50rpx;
  height: 50rpx;
  padding: 0 20rpx;
}
.wrap .head .head-set .set-btn>image{
  width: 100%;
  height: 100%;
}
.wrap .head .head-set .set-btn>view{
  position: absolute;
  right: -20rpx;
  top: -15rpx;
  font-size: 26rpx;
  border-radius: 50px;
  width: 40rpx;
  text-align: center;
  height:40rpx;
  line-height:40rpx;
  background: #fff;
}
.wrap .head .head-set .set-btn:last-child{
  padding-right:0;
}
.wrap .head .user-con{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.wrap .head .user-con .user-info{
  position: relative;
  display: flex;
  align-items: center;
}
.wrap .head .user-con .user-info .user-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 28rpx;
  overflow: hidden;
}
.wrap .head .user-con .user-info .user-img image{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.wrap .head .user-info .user-details{
  width: 300rpx;
  padding-left: 18rpx;
}
.wrap .head .user-details .user-nickname{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
}
.wrap .head .user-details .no-login{
  font-size: 34rpx;
  font-weight: bold;
}
.wrap .head .user-details .rank{
  width: 138rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.wrap .head .user-con .user-card{
  position: absolute;
  right: 8rpx;
  top: 16rpx;
  z-index: 5;
}
.wrap .head .user-con .user-card .card{
  width: 132rpx;
  height: 72rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.wrap .head .user-con .user-wallet{
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
  margin-top: auto;
  padding: 18rpx 25rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 20rpx 20rpx 0 0;
  background: linear-gradient(to right, #f8f8f8, #efefef);
  box-shadow: 0 0 20rpx 0 rgba(0,0,0,0.1);
}
.wrap .head .head-bg{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.wrap .head .head-bg>.circle{
  border-radius: 50%;
  background-color: rgba(255,255,255,0.15);
  /* background: linear-gradient(to left, rgba(255,255,255,0) 55%,rgba(255,255,255,0.3) 80%); */
  /* opacity: 0.7; */
}
.wrap .head .head-bg .circle1{
  width: 466rpx;
  height: 466rpx;
  transform: translate(-150rpx,-230rpx) rotate(250deg);
}
.wrap .head .head-bg .circle2{
  width: 273rpx;
  height: 273rpx;
  transform: translate(550rpx,-380rpx) rotate(-35deg);
}
.wrap .head .user-wallet .icon{
  width: 40rpx;
  height: 40rpx;
}
.wrap .head .user-wallet .title{
  font-size: 26rpx;
  margin-right: auto;
  margin-left: 8rpx;
}
.wrap .head .user-wallet .btn{
  font-size: 26rpx;
  border-radius: 50px 50px;
  padding: 6rpx 16rpx;
  border: 1px solid transparent;
}

.wrap .section .row{
  padding: 35rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
  background-color: #fff;
}
.wrap .section .row .title{
  display: flex;
  align-items: center;
}
.section .row .title .h1{
  font-size: 32rpx;
  color: #222;
}
.section .row .section-con{
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}
.section .row .section-con .li{
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.row .section-con .li .section-icon{
  width: 70rpx;
  height: 70rpx;
}
.row .section-con .li .section-name{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #222;
}
.row .section-con .li .section-num{
  position: absolute;
  top: -6rpx;
  right: 18rpx;
  display: inline-block;
  width: 36rpx;
  height:36rpx;
  font-size: 20rpx;
  border-radius: 50px 50px;
  text-align: center;
  line-height: 36rpx;
  border: 1px solid #ccc;
  background-color: #fff;
}
.section .order .title{
  justify-content: space-between;
}
.section .order .li .section-name{
  margin-top: 10rpx;
}
.section .order .next-btn{
  display: flex;
  align-items: center;
}
.section .order .next-btn>text{
  font-size: 24rpx;
  color: #848484;
}
.section .order .next-btn>.next{
  width: 12rpx;
  height: 24rpx;
  margin-left: 12rpx;
}

.section .distribution .dy_vicon{
  width: auto;
  height: 42rpx;
  margin-left: 14rpx;
  font-size: 20rpx;
  line-height: 42rpx;
  border-radius: 0 18rpx 18rpx 18rpx;
  padding: 0 14rpx;
  color: #fff;
  box-shadow: 2rpx 5rpx 20rpx 0 rgba(255, 148, 0,.4);
  background:linear-gradient(to right,#ff9400,#ff7617);
}
