.tab-view {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 4;
  width: calc(100% - 70rpx);
  padding-right: 70rpx;
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
  background: white;
}

.tab-sroll {
  height: 82rpx;
  white-space: nowrap;
}

.tab-sroll .tab-item {
  display: inline-block;
  padding: 0 30rpx;
}

.tab-sroll .tab-item text {
  font-size: 28rpx;
  line-height: 78rpx;
  position: relative;
  display: inline-block;
  border-bottom: 4rpx solid #fff;
}

