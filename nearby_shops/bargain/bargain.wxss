.bg {
  padding-bottom: 10rpx;
  background-color: #f23030;
}

.bargain-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.rule {
  position: absolute;
  right: 18rpx;
  top: 14rpx;
}

.rule {
  overflow: hidden;
}

.rule .vertical {
  width: 4rpx;
  height: 36rpx;
  float: left;
  background: #fff0ee;
}

.rule .cur {
  width: 120rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  text-align: center;
  float: left;
  margin-left: 4rpx;
  background: #fff0ee;
}

.bargain-wrap {
  position: relative;
  z-index: 2;
  margin-bottom: 20rpx;
}

.bargain-info {
  width: 684rpx;
  margin: 110rpx auto 0;
  border-radius: 10rpx;
  border-top: 1rpx solid white;
  border-bottom: 1rpx solid white;
  background: white;
}

.bargain-info .user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: -64rpx auto 0;
  background-color: #fff;
  border: 4rpx solid white;
}

.bargain-info .user-avatar image {
  width: 120rpx;
  height: 120rpx;
}

.bargain-info .user-name {
  font-size: 26rpx;
  color: #8d8d8d;
  text-align: center;
}

.bargain-info .find-img {
  width: 100%;
  height: 44rpx;
}

.bargain-info .good-wrap {
  width: 620rpx;
  padding: 10rpx;
  margin: 0 auto;
  background: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
}

.bargain-info .good-wrap .file {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  float: left;
}

.bargain-info .good-wrap .file> image {
  width: 200rpx;
  height: 200rpx;
}

.bargain-info .good-info {
  width: 380rpx;
  float: left;
  margin-left: 22rpx;
}

.good-info .good-name {
  font-size: 28rpx;
  height: 76rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 4rpx;
}

.good-info .base-price {
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 0 10rpx;
  background: #ffecec;
}

.good-info .origin-price {
  font-size: 22rpx;
  margin-left: 14rpx;
  text-decoration: line-through;
  color: #8d8d8d;
}

.good-info .good-tips {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.good-info .present-price {
  font-size: 28rpx;
  line-height: 1;
}

.good-info .bargain-num {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5f5f5f;
}

.bargain-info .bargain-spread {
  margin-top: 40rpx;
  font-size: 30rpx;
  text-align: center;
}

.bargain-info .bargain-spread .cur {
  font-weight: bold;
}

.bargain-info .bargain-progress {
  position: relative;
  width: 630rpx;
  height: 16rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 28rpx;
  background: #e7e7e7;
}

.bargain-info .progress {
  position: absolute;
  left: 0;
  top: 0;
  height: 16rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #fadc22;
}

.bargain-info .bargain-money {
  width: 630rpx;
  margin: 10rpx auto;
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
  color: #8d8d8d;
}

.bargain-info .bargain-money > view:first-child {
  text-decoration: line-through;
}

.bargain-info .bargain-operation {
  position: relative;
  width: 606rpx;
  height: 106rpx;
  margin: 0 auto;
  display: flex;
  overflow: hidden;
}

.bargain-info .bargain-operation .other-activity {
  position: relative;
  z-index: 2;
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 90rpx;
  text-align: center;
}

