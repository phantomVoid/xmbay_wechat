  font-size: 30rpx;
  line-height:90rpx;
  text-align: center;
  position: relative;
  z-index: 2;
  width: 100%;
} */

.bargain-info .bargain-operation image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bargain-info .bargain-other image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bargain-info .bargain-other {
  position: relative;
  display: flex;
  width: 606rpx;
  height: 88rpx;
  margin: 0 auto;
  overflow: hidden;
}

.bargain-info .bargain-other .bargain-cut {
  z-index: 2;
  width: 100%;
  font-size: 30rpx;
  line-height: 88rpx;
  font-weight: bold;
  text-align: center;
}

.bargain-info .bargain-operation .bargain-share {
  position: relative;
  z-index: 2;
  font-size: 30rpx;
  font-weight: bold;
  width: 440rpx;
  line-height: 106rpx;
  margin-top: 8rpx;
  text-align: center;
}

.bargain-info .bargain-operation .bargain-pay {
  position: relative;
  z-index: 2;
  font-size: 30rpx;
  line-height: 106rpx;
  text-align: center;
  width: 166rpx;
  font-weight: bold;
  margin-top: 8rpx;
}

.bargain-info .bargain-operation .bargain-pay1 {
  position: relative;
  z-index: 2;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 90rpx;
  text-align: center;
  width: 100%;
}

.bargain-info .bargain-time {
  font-size: 26rpx;
  text-align: center;
  margin: 22rpx 0;
}

.vertical-line {
  display: flex;
  justify-content: space-between;
  height: 24rpx;
  padding: 0 178rpx;
}

.vertical-line view {
  width: 16rpx;
  height: 100%;
  background: white;
}

.bargain-help {
  position: relative;
  z-index: 2;
  padding: 30rpx 0;
  width: 684rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background: white;
}

.bargain-help .help-head {
  position: relative;
  width: 548rpx;
  margin: 0 auto;
}

.bargain-help .help-head image {
  width: 548rpx;
  height: 28rpx;
}

.bargain-help .help-head view {
  position: absolute;
  left: 50%;
  top: 0;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: -48rpx;
}

.helper-list {
  display: inline-block;
  width: 100%;
  max-height: 348rpx;
  overflow: auto;
}

.help-person {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.help-person > view {
  width: 60%;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.help-person .person-info .avatar {
  flex-shrink: 0;
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
  overflow: hidden;
}

.help-person .person-info .avatar image {
  width: 94rpx;
  height: 94rpx;
}

.help-person .person-info .nickname {
  font-size: 30rpx;
  margin: 0 20rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #5f5f5f;
}

.help-person .person-price image {
  width: 46rpx;
  height: 44rpx;
}

.help-person .person-price view {
  font-size: 30rpx;
  margin-left: 16rpx;
  color: #5f5f5f;
}
