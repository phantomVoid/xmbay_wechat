/* nearby_shops/shop_intro/shop_code.wxss */
.warp{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  /* transition: all 1s; */
  opacity: 0
}
.warp .warp-con{
  width: 80%;
  overflow: hidden;
  margin: 200rpx auto 0;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 98rpx;
  box-sizing: border-box;
  /* transform: translateY(-100vh); */
}
.warp .warp-con .title{
  font-size: 28rpx;
  padding: 40rpx 0;
}
.warp .warp-con .code-con{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx 0;
}
.warp .warp-con .shop-logo{
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.warp .warp-con .shop-logo .logo{
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  overflow: hidden;
}
.warp .warp-con .code{
  width: 400rpx;
  height: 400rpx;
}
.warp .warp-con .tip{
  font-size: 26rpx;
  padding: 40rpx 0;
}
.warp .mu{
  opacity: 0;
}