.evaluate-head {
  width: 95%;
  padding: 0 2.5% 30rpx;
  background: white;
  overflow: hidden;
  border-bottom: 2rpx solid #f5f5f5;
}

.evaluate-head > view {
  display: flex;
  font-size: 26rpx;
  line-height: 58rpx;
  border-radius: 6rpx;
  padding: 0 20rpx;
  float: left;
  margin-right: 24rpx;
  margin-top: 24rpx;
  background: #fff;
  border: 2rpx solid #fff;
}

.detail-grade .star{
  margin-left: 10rpx;
  font-size: 26rpx;
}
.evaluate-head > view image {
  width: 18rpx;
  height: 12rpx;
  margin-right: 6rpx;
}

.evaluate-list {
  background: white;
}

.evaluate-detail {
  padding: 34rpx 4%;
}

.pic-item {
  margin-right: 2% !important;
  float: left;
  width: 32%;
}

.pic-item:nth-child(3n + 1) {
  margin-right: 0 !important;
}

.pic-list .big {
  width: 378rpx;
  height: 378rpx;
}

.video-view {
  position: relative;
  width: 32%;
  margin-right: 2% !important;
  float: left;
}

.video-item {
  width: 32%;
  margin-right: 2% !important;
  float: left;
}

.video-item:nth-child(3n) {
  margin-right: 0 !important;
}

.reply {
  position: relative;
  padding: 20rpx 20rpx 70rpx 20rpx;
  font-size: 28rpx;
  margin-top: 40rpx;
  color: #828282;
  background: #f8f8f8;
}

.reply::after {
  position: absolute;
  left: 40rpx;
  top: -18rpx;
  content: '';
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid #f8f8f8;
}
.no-order {
  height: calc(100vh - 250rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-order > view {
  width: 100%;
}

.no-order image {
  width: 100%;
  height: 260rpx;
}

.no-order .no-order-head {
  font-size: 30rpx;
  text-align: center;
}

.no-order .no-order-content {
  font-size: 26rpx;
  color: #8d8d8d;
  text-align: center;
  margin-top: 10rpx;
}