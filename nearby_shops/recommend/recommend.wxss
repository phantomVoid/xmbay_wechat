.tab-view {
  padding-right: 70rpx;
  box-shadow: 0px 4rpx 4rpx #e0e0e0;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 4;
  width: calc(100% - 70rpx);
}

.tab-sroll {
  height: 82rpx;
  white-space: nowrap;
}

.tab-sroll .tab-item {
  display: inline-block;
  padding: 0 38rpx;
}

.tab-sroll .tab-item text {
  font-size: 28rpx;
  line-height: 78rpx;
  position: relative;
  display: inline-block;
  border-bottom: 4rpx solid #fff;
}

