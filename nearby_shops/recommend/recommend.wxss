.tab-view .more {
  width: 70rpx;
  height: 82rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
}

.tab-view .more::after {
  width: 2rpx;
  height: 34rpx;
  background: #bbb;
  content: '';
  position: absolute;
  top: 50%;
  margin-top: -17rpx;
  left: 0;
}

.tab-view .more image {
  width: 22rpx;
  height: 12rpx;
}

.wrap {
  padding-top: 84rpx;
}

.wrap > view {
  margin-top: 18rpx;
  background: white;
}

.recommend-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  line-height: 30rpx;
  padding-top: 50rpx;
}

.recommend-title .line {
  width: 36rpx;
  height: 2rpx;
  margin: 0 14rpx;
}

.recommend-slogan {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #62686d;
  margin-top: 10rpx;
  text-align: center;
}

.scroll {
  height: 394rpx;
  margin-left: 20rpx;
  white-space: nowrap;
  margin-top: 30rpx;
}

.scroll .good-info {
  display: inline-block;
  width: 220rpx;
  margin-right: 10rpx;
}

.scroll .good-info > image {
  width: 220rpx;
  height: 220rpx;
}

.scroll .good-info .good-name {
  font-size: 28rpx;
  line-height: 36rpx;
  height: 72rpx;
  width: 200rpx;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
  text-align: center;
}

.scroll .good-info .price {
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 10rpx;
  margin-top: 10rpx;
  text-align: center;
}

.scroll-list{
  margin-top: 82rpx;
  height: calc(100vh - 82rpx);
}