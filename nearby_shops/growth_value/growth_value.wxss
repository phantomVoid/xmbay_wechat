.growth-head {
  width: 100%;
  height: 410rpx;
  position: relative;
}

.cur {
  color: #ea5900 !important;
}

.bg {
  background: #ffc263 !important;
}

.growth-head > image {
  width: 100%;
  height: 100%;
}

.growth-head .growth-value {
  font-size: 70rpx;
  color: #ea5900;
  position: absolute;
  width: 100%;
  left: 0;
  top: 200rpx;
  font-weight: bold;
  text-align: center;
}

.growth-head .growth-time {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 24rpx;
  font-size: 26rpx;
  text-align: center;
}

.growth-logo {
  width: 100%;
  height: 96rpx;
}

.wrap {
  margin-top: 16rpx;
}

.head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 68rpx;
  background: white;
  border-bottom: 2rpx solid #f6f6f6;
}

.head > view {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.head > view .line {
  width: 6rpx;
  height: 28rpx;
  margin: 0 16rpx 0 30rpx;
}

.head > image {
  width: 22rpx;
  height: 12rpx;
  margin-right: 60rpx;
}

.content {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border-bottom: 2rpx solid #f6f6f6;
}

.content .content-left {
  margin-left: 30rpx;
}

.content .content-left .content-title {
  font-size: 30rpx;
}

.content .content-left .content-info {
  font-size: 26rpx;
  color: #8d8d8d;
  margin-top: 10rpx;
}

.content .content-right {
  flex-shrink: 0;
  margin-right: 30rpx;
  width: 132rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 54rpx;
  border-radius: 30rpx;
  color: white;
  background: #d3d4d5;
}
