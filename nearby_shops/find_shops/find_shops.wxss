.tab-view {
  position: fixed;
  left: 0;
  top: 0;
  padding-right: 70rpx;
  box-shadow: 0px 4rpx 4rpx #e0e0e0;
  background: white;
  margin-top: 1rpx;
  width: calc(100% - 70rpx);
  z-index: 2;
}

.tab-sroll {
  height: 82rpx;
  white-space: nowrap;
}

.tab-sroll .tab-item {
  display: inline-block;
  padding: 0 38rpx;
}

.tab-sroll .tab-item text {
  font-size: 28rpx;
  line-height: 78rpx;
  position: relative;
  display: inline-block;
  border-bottom: 4rpx solid #fff;
}

