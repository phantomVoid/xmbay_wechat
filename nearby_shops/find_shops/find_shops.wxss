.tab-view .more {
  width: 70rpx;
  height: 82rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
}

.tab-view .more::after {
  width: 2rpx;
  height: 34rpx;
  background: #bbb;
  content: '';
  position: absolute;
  top: 50%;
  margin-top: -17rpx;
  left: 0;
}

.tab-view .more image {
  width: 22rpx;
  height: 12rpx;
}



.shop-wrap {
  padding-top: 80rpx;
  padding-bottom: 20rpx;
  width: 702rpx;
  height: calc(100vh - 100rpx);
  margin: 0 auto;
}

.shop-list {
}

.shop-item {
  margin-top: 18rpx;
  background: white;
}

.shop-item .shop-info {
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.shop-item .shop-info > image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 20rpx;
}

.shop-item .shop-info .shop-name {
  font-size: 30rpx;
  margin-left: 18rpx;
}

.shop-item .shop-info .into-shop {
  font-size: 28rpx;
  line-height: 40rpx;
  width: 108rpx;
  text-align: center;
  border-radius: 10rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -20rpx;
}

.shop-item .shop-imgs {
  overflow: hidden;
}

.shop-item .shop-imgs .one-img {
  float: left;
  width: 468rpx;
  height: 468rpx;
}

.shop-item .shop-imgs > view {
  float: left;
  width: 230rpx;
  margin-left: 4rpx;
}

.shop-item .shop-imgs > view image {
  width: 230rpx;
  height: 230rpx;
  display: block;
}

.shop-item .shop-imgs > view .three-img {
  margin-top: 8rpx;
}


.no-order {
  height: calc(100vh - 170rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-order > view {
  width: 100%;
}

.no-order image {
  width: 100%;
  height: 260rpx;
}

.no-order .no-order-head {
  font-size: 32rpx;
  text-align: center;
}

.no-order .no-order-content {
  font-size: 26rpx;
  color: #8d8d8d;
  text-align: center;
  margin-top: 10rpx;
}
