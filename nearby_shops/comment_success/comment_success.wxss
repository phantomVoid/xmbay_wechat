.head > .imagebg {
  width: 100%;
  height: 230rpx;
  position: relative;
  margin:0;
  
}
.head > .imagebg>view {
  width: 100%;
  height: 100%;
  opacity: .6;
}

.head {
  height: 226rpx;
  position: relative;
}

.head > image {
  width: 100%;
  height: 100%;
}

.head > view {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.head .slogan {
  font-size: 30rpx;
  line-height: 30rpx;
  color: white;
  text-align: center;
  margin: 50rpx 0 40rpx;
}

.head .my-comment {
  width: 244rpx;
  font-size: 30rpx;
  line-height: 52rpx;
  color: #fdc70f;
  margin: 0 auto;
  border: 2rpx solid #fdc70f;
  text-align: center;
  border-radius: 30rpx;
}

.then-comment {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f6f6f6;
  height: 114rpx;
}

.then-comment .line {
  width: 114rpx;
  height: 1rpx;
  background: #8d8d8d;
}

.then-comment .title {
  font-size: 30rpx;
  margin: 0 100rpx;
  color: #8d8d8d;
}

.list {
  background: white;
}

.list > view > view {
  padding: 26rpx 20rpx;
}

.list-item {
  overflow: hidden;
}

.list-item > image {
  width: 208rpx;
  height: 208rpx;
  float: left;
}

.list-item > view {
  width: 450rpx;
  float: left;
  margin-left: 20rpx;
}

.list-item .good-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  margin-top: 8rpx;
  height: 76rpx;
}

.comment {
  padding: 0 !important;
  overflow: hidden;
}

.go-comment {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50rpx;
  width: 150rpx;
  border-radius: 30rpx;
  float: right;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.go-comment image {
  width: 28rpx;
  height: 28rpx;
}

.go-comment view {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-left: 12rpx;
}

.shop {
  display: flex;
  align-items: center;
  padding: 0 !important;
}

.item-shop-icon {
  width: 42rpx;
  height: 42rpx;
  margin-left: 24rpx;
}

.item-shop-name {
  font-size: 28rpx;
  line-height: 80rpx;
  margin-left: 16rpx;
}

.item-shop-next {
  width: 12rpx;
  height: 22rpx;
  margin-left: 16rpx;
}
