.order-head > image {
  position: relative;
  width: 100%;
  height: 230rpx;
}

.order-head > view {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 148rpx;
  margin: 0 30rpx;
}

.order-head > view view {
  font-size: 36rpx;
  color: white;
}

.order-head > view image {
  width: 230rpx;
  height: 140rpx;
}

.address-wrap {
  position: relative;
  z-index: 2;
  margin: -80rpx 30rpx 0;
  border-radius: 10rpx;
  padding: 54rpx 26rpx;
  background: white;
}

.order-head > .imagebg {
  position: relative;
  width: 100%;
  height: 230rpx;
  margin:0;
  
}
.order-head > .imagebg>view {
  width: 100%;
  height: 100%;
  opacity: .6;
}

.address-wrap .logistics-info {
  position: relative;
  overflow: hidden;
}

.address-wrap .logistics-info .logo {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.address-wrap .logistics-info view {
  font-size: 28rpx;
  margin-left: 20rpx;
  float: left;
}

.address-wrap .logistics-info .next {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
}

.address-wrap .address {
  overflow: hidden;
  margin-top: 40rpx;
}

.address > image {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.address > view {
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  width: 570rpx;
  text-align: left;
  margin-left: 20rpx;
  float: left;
}

.address .user-info {
  font-size: 30rpx;
  font-weight: bold;
}

.address .user-info text {
  margin-right: 40rpx;
}

.address .address-detail {
  display: -webkit-box;
  font-size: 28rpx;
  line-height: 36rpx;
  text-align: left;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.self-delivery > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.self-delivery > view > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 80rpx;
}

.self-delivery .self-left view {
  display: flex;
  margin-left: 16rpx;
}

.self-delivery .self-left image {
  width: 40rpx;
  height: 40rpx;
}

.self-delivery .self-right image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
}

.self-delivery .self-address {
  font-size: 28rpx;
  text-align: right;
  display: block;
  color: #8d8d8d;
}

.good-wrap {
  width: 100%;
  background: white;
}

.order-good-wrap {
  margin-top: 20rpx;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  background: white;
}

.order-good-wrap > view {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.order-good-image {
  flex-shrink: 0;
  width: 180rpx;
  height: 180rpx;
  /* float: left; */
}

.order-good-info {
  flex: 1;
  /* width: 480rpx; */
  /* float: left; */
  margin-left: 26rpx;
}

.order-good-name {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order-good-attr {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #8d8d8d;
}

.order-good-tip {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 40rpx;
  
}

.order-good-num {
  font-size: 24rpx;
}

.actually-pay {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 110rpx;
  border-top: 2rpx solid #f0f0f0;
  background: white;
  overflow: hidden;
}

.actually-pay > view {
  float: right;
  margin-right: 20rpx;
}

.order-infor {
  padding: 30rpx;
  margin-top: 20rpx;
  background: white;
}

.order-infor .copy {
  display: inline-block;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 116rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-left: 30rpx;
  border: 2rpx solid #f0f0f0;
}

.order-infor > view {
  font-size: 28rpx;
  line-height: 28rpx;
}

.order-infor .order-time {
  margin-top: 30rpx;
}

.logistics {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
  border-top: 1px solid #f0f0f0;
  background: white;
}

.logistics > view {
  width: 170rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 20rpx 24rpx 20rpx 0;
  text-align: center;
  border: 1px solid #b0b0b0;
}
