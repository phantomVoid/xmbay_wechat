page {
  background: white;
}

.avatar {
  margin-left: 24rpx;
  height: 166rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f5f5f5;
}

.left {
  font-size: 32rpx;
}

.right {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.avatar .right .avatar-img {
  width: 114rpx;
  height: 114rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.right .next {
  width: 12rpx;
  height: 22rpx;
}

.content {
  margin-left: 24rpx;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f5f5f5;
}

.content .right view {
  width: 300rpx;
  text-align: right;
  font-size: 28rpx;
  margin-right: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: auto;
  color: #8d8d8d;
}

.right .member-name {
  margin-right: 34rpx !important;
}

.right .member-qr {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}
