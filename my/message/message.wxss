.head {
  width: 100%;
  height: 200rpx;
  background: white;
  overflow: hidden;
}

.head > view {
  width: 33.3%;
  height: 100%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
}

.head-content {
}

.head-content > view {
  position: relative;
}

.head-content > view > view {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 22rpx;
  border-radius: 50%;
  border: 2rpx solid white;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.head-content image {
  width: 98rpx;
  height: 98rpx;
  display: block;
}

.head-content .title {
  font-size: 26rpx;
  line-height: 26rpx;
  margin-top: 20rpx;
  color: #848484;
  text-align: center;
}

.service-list{
  margin-top: 26rpx;
  height: calc(100vh - 226rpx);
}
.service-list>scroll-view{
  height: 100%;
}
.service-list .list{
  display: flex;
  align-items: center;
  overflow: hidden;
  padding: 26rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 1rpx;
}
.service-list .list>.store_img{
  width: 84rpx;
  height: 84rpx;
  background-color: #ddd;
  border-radius: 8rpx;
  flex-shrink: 0;
}
.service-list .list>.store_con{
  width: 75%;
  padding: 0 38rpx;
  box-sizing: border-box;
}
.service-list .list>.store_con .store_name{
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 14rpx;
}
.service-list .list>.store_con .store_data{
  font-size: 26rpx;
  color: #8d8d8d;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.service-list .list>.store_time{
  font-size: 22rpx;
  color: #808080;
  transform: translateY(-20rpx);
}