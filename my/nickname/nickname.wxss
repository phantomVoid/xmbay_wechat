.wrap {
  position: relative;
}

input {
  padding-left: 24rpx;
  width: calc(100% - 24rpx);
  font-size: 30rpx;
  line-height: 90rpx;
  height: 90rpx;
  min-height: 90rpx;
  background: white;
}

image {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
  position: absolute;
  right: 26rpx;
  top: 50%;
  margin-top: -20rpx;
  z-index: 2;
}

.nickname-rule {
  font-size: 28rpx;
  color: #8d8d8d;
  margin: 36rpx;
}

.save {
  position: absolute;
  left: 0;
  bottom: 30rpx;
  width: 100%;
}

.save > view {
  width: 692rpx;
  font-size: 32rpx;
  color: white;
  line-height: 84rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  text-align: center;
}
