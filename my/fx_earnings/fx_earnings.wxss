page {
  background-color: #fff;
}

.warp {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-bottom: 50rpx;
}

.warp .sy-exhibition {
  position: relative;
  width: 90%;
  height: 260rpx;
  margin-top: 20rpx;
  background: linear-gradient(to right, #fe552b, #f23030);
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(188, 150, 92, 0.3);
  color: #fff;
  
}
.warp .sy-exhibition .con{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  padding: 25rpx;
  box-sizing: border-box;
}
.warp .sy-exhibition>image{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 245rpx;
  opacity: 0.7;
}
.warp .sy-exhibition .sy-row{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.warp .sy-exhibition .sy-row .sy-title {
  font-size: 26rpx;
}
.warp .sy-exhibition .sy-row .sy-explain {
  width: 37rpx;
  height: 37rpx;
}

.warp .sy-exhibition .sy-price {
  font-size: 45rpx;
  padding: 15rpx 0 30rpx;
}

.warp .sy-exhibition .sy-balance {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.warp .sy-exhibition .sy-balance .sy-btn {
  font-size: 24rpx;
  padding: 10rpx 33rpx;
  border: 1px solid #fff;
  border-radius: 8rpx;
}

.warp .sy-con{
  width: 90%;
  margin-top: 50rpx;
  background-color: #fff; 
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx 0rpx rgba(151, 111, 57, 0.1);
  color: #fff;
  box-sizing: border-box;
}
.warp .sy-con .sy-title{
  display: flex;
  align-items: center;
  border-bottom: 1px solid #fafafa;
  padding: 20rpx 28rpx;
}
.warp .sy-con .sy-title .icon{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-right: 14rpx;
}
.warp .sy-con .sy-title text{
  flex: 1;
  font-size: 28rpx;
  color: #111;
}
.warp .sy-con .sy-details{
  display: flex;
}
.warp .sy-con .sy-details .line{
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 38rpx;
  padding-bottom: 35rpx;
}
.warp .sy-con .sy-details .line .name{
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
}

.warp .sy-ljsy .sy-details .line .price{
  font-size: 36rpx;
  color: #fb8205;
}

.warp .sy-jrsy .sy-details .line .price{
  font-size: 36rpx;
  color: #0897ff;
}

