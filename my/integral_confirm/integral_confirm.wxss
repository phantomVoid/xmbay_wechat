.no-address {
  width: 100%;
  height: 156rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-address > image {
  width: 44rpx;
  height: 44rpx;
}

.no-address > view {
  font-size: 28rpx;
  color: #8a8a8a;
  margin-left: 20rpx;
}

.address {
  padding: 4% 10% 4% 4%;
  width: 86%;
  background: white;
  position: relative;
  border-top: 2rpx solid #f6f6f6;
}

.address-head {
  overflow: hidden;
  font-weight: bold;
}

.address-head .address-receiver {
  float: left;
  font-size: 30rpx;
}

.address-head .address-phone {
  float: right;
  font-size: 28rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  text-align: left;
  margin-top: 14rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.address .next {
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  top: 50%;
  right: 5%;
  margin-top: -6rpx;
}

.bottom {
  width: 100%;
  height: 10rpx;
  display: block;
}

.good-detail {
  width: 92%;
  background: white;
  padding: 10rpx 4%;
  margin-top: 16rpx;
}

.good-detail .good-info image {
  width: 180rpx;
  height: 180rpx;
  display: block;
}

.good-detail > view {
  position: relative;
  overflow: hidden;
}

.good-detail .good-info > view {
  top: 14rpx;
  left: 200rpx;
  position: absolute;
}

.good-detail .good-name {
  font-size: 28rpx;
  line-height: 36rpx;
  height: 72rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.good-detail .good-tips {
  font-size: 30rpx;
  margin-top: 40rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  background: white;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}

.footer .left {
  width: 70%;
  height: 100%;
  text-align: right;
}

.footer .left view {
  font-size: 30rpx;
  line-height: 100rpx;
  display: inline-block;
  margin-right: 50rpx;
}

.footer .right {
  width: 30%;
  height: 100%;
  color: white;
  text-align: center;
  font-size: 32rpx;
  line-height: 100rpx;
}
