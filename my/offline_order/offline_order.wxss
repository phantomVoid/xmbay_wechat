.wrap {
  margin: 0 24rpx;
  background: white;
  margin-top: 28rpx;
}

.wrap > view {
  padding: 0 24rpx;
}

.shop-info {
  display: flex;
  align-items: center;
  padding-top: 36rpx;
}

.shop-info > image {
  width: 32rpx;
  height: 32rpx;
}

.shop-info > view {
  font-size: 30rpx;
  line-height: 30rpx;
  margin-left: 24rpx;
}

.price-title {
  font-size: 30rpx;
  line-height: 30rpx;
  margin-top: 96rpx;
  text-align: center;
}

.price {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  padding-top: 30rpx;
  border-bottom: 2rpx solid #f6f6f6;
}

.price > view {
  display: flex;
  align-items: flex-start;
  text-align: center;
  font-size: 60rpx;
  line-height: 1;
  font-weight: bold;
}

.price .unit {
  font-size: 34rpx;
  line-height: 1;
  margin-top: 6rpx;
}

.bottom {
  font-size: 28rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottom image {
  width: 12rpx;
  height: 22rpx;
}

.no-order {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-order > view {
  width: 100%;
}

.no-order image {
  width: 100%;
  height: 260rpx;
}

.no-order .no-order-head {
  font-size: 32rpx;
  text-align: center;
}

.no-order .no-order-content {
  font-size: 26rpx;
  color: #8d8d8d;
  text-align: center;
  margin-top: 10rpx;
}
