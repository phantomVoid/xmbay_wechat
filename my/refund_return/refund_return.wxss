.good-wrap {
  background: white;
  padding: 10rpx 24rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.good-wrap > image {
  width: 180rpx;
  height: 180rpx;
  background: lightblue;
  float: left;
}

.good-wrap > view {
  float: left;
  width: 490rpx;
  margin-left: 26rpx;
}

.good-wrap .good-name {
  font-size: 28rpx;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 4rpx;
}

.good-wrap .good-attr {
  font-size: 26rpx;
  color: #8d8d8d;
  margin-top: 14rpx;
}

.retrun-way {
  width: 100%;
  overflow: hidden;
  font-size: 28rpx;
  background: white;
  margin-bottom: 16rpx;
}

.retrun-way .retrun-head {
  float: left;
  line-height: 100rpx;
  margin-left: 24rpx;
}

.retrun-way .retrun-content {
  float: right;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.retrun-way .retrun-content > view {
  line-height: 52rpx;
  padding: 0 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.hdl-info {
  width: 100%;
  background: white;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 100rpx;
  position: relative;
}

.hdl-info .title {
  float: left;
  margin-left: 24rpx;
}

.hdl-info .hdl-name {
  float: right;
  margin-right: 70rpx;
}

.hdl-info image {
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 24rpx;
  top: 50%;
  margin-top: -11rpx;
}

.hdl-info input {
  float: right;
  margin-right: 70rpx;
  height: 100rpx;
  text-align: right;
}

.upload-wrap {
  background: white;
  padding-left: 24rpx;
  padding-bottom: 40rpx;
}

.upload-wrap .head {
  font-size: 28rpx;
  line-height: 86rpx;
}

.upload-wrap .pic-list {
  overflow: hidden;
}

.upload-wrap .pic-list > view {
  width: 168rpx;
  height: 168rpx;
  margin-right: 28rpx;
  position: relative;
  float: left;
  padding-right: 20rpx;
  padding-top: 20rpx;
}

.upload-wrap .pic-list .pic {
  width: 100%;
  height: 100%;
}

.upload-wrap .pic-list .delete {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 0;
  top: 0;
}
