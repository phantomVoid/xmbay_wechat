.tab-view {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
}

.tab-view > view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  height: 100%;
  line-height: 82rpx;
  text-align: center;
  float: left;
}

.tab-view > view view {
  position: relative;
  height: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  border-bottom: 6rpx solid #fff;
}

.bargain-list {
  width: calc(100vw - 44rpx);
  height: calc(100vh - 180rpx);
  padding: 0 22rpx;
  margin-top: 80rpx;
  margin-bottom: 100rpx;
}

.bargain-list > view {
  border-top: 2rpx solid #f6f6f6;
}

.bargain-item {
  position: relative;
  margin-top: 16rpx;
  background: white;
}

.bargain-item > image {
  position: absolute;
  right: 0;
  top: 0;
  width: 116rpx;
  height: 116rpx;
}

.bargain-time {
  font-size: 28rpx;
  line-height: 75rpx;
  padding-left: 26rpx;
  border-bottom: 1px solid #f0f0f0;
}

.bargain-item > .bargain-info {
  position: relative;
  display: flex;
  align-items: center;
  padding: 26rpx;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
}

.bargain-info > .bargain-img {
  width: 174rpx;
  height: 174rpx;
  float: left;
}

.bargain-info > .bargain-img image {
  width: 100%;
  height: 100%;
}

.bargain-info .bargain-state {
  position: absolute;
  right: 0;
  top: 0;
  width: 116rpx;
  height: 116rpx;
}

.bargain-info > .bargain-info {
  width: 436rpx;
  height: 174rpx;
  float: left;
  margin-left: 26rpx;
}

.bargain-info .bargain-name {
  width: 350rpx;
  min-height: 72rpx;
  font-size: 28rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.bargain-info .bargain-tip {
  display: flex;
  align-items: flex-end;
  margin-top: 46rpx;
}

.bargain-info .bargain-price {
  line-height: 1;
  margin-left: 20rpx;
}

.bargain-info .origin-price {
  font-size: 24rpx;
  line-height: 1;
  color: #909090;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.bargain-item .bargain-operation {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 94rpx;
}

.bargain-item .bargain-operation > view {
  width: 170rpx;
  line-height: 54rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  text-align: center;
  margin-right: 36rpx;
  border: 1px solid #f0f0f0;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
  /* border-top: 2rpx solid #f0f0f0; */
}

.footer > view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  float: left;
}

.footer > view .title {
  font-size: 32rpx;
  margin-left: 20rpx;
  color: #6e7479;
}

.footer > view .shop-icon {
  font-size: 50rpx;
  color: #6e7479;
}

.footer > view .mykj-icon {
  font-size: 50rpx;
}

.empty-view {
  height: calc(100vh - 200rpx);
}
