page {
  background: #323a4f;
}
canvas{
  position: fixed;
  left: -100vw;
  bottom: 10vh;
}

.wrap {
  width: 100%;
  height: 100vh;
}

.vip-card {
  width: 100%;
  padding-top: 40rpx;
  border-radius: 10rpx;
  /* margin-top: 40rpx; */
  overflow: hidden;
  transition: all 0.2s ease;
}

.vip-card > view {
  width: 688rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.scale {
  transform: scale(0.9);
  transition: all 0.5s ease;
  opacity: 0.7;
}

.vip-card .vip-head {
  padding-left: 44rpx;
  font-size: 36rpx;
  line-height: 104rpx;
  background: #f5f5f5;
}

.vip-content {
  background: white;
  border: 2rpx solid white;
}

.card {
  width: 608rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 32rpx;
}

.card > image {
  width: 100%;
  height: 320rpx;
  background: #d0ad76;
  border-radius: 10rpx;
  overflow: hidden;
}

.card > view {
  position: absolute;
  left: 0;
  top: 30rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card > view view {
  font-size: 28rpx;
  color: #fffee4;
}

.vip-number {
  margin-left: 44rpx;
}

.vip-grade {
  margin-right: 36rpx;
}

.vip-content .card-code {
  width: 584rpx;
  height: 126rpx;
  display: block;
  margin: 0 auto;
  margin-top: 40rpx;
}

.card-number {
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
}

.privileges {
  overflow: hidden;
  border-top: 2rpx solid #f5f5f5;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}

.privileges > view {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.privileges > view image {
  width: 30rpx;
  height: 30rpx;
}

.privileges > view view {
  font-size: 28rpx;
  color: #8d8d8d;
  margin-left: 12rpx;
}

.pay-code-wrap {
  position: fixed;
  bottom: -80%;
  left: 0;
  width: 100%;
  height: 88%;
  transition: all 0.5s ease;
}

.pay-code-anim {
  bottom: 0;
  transition: all 0.5s ease;
}

.pay-code {
  width: 688rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.code-head {
  padding-left: 44rpx;
  font-size: 36rpx;
  line-height: 104rpx;
  background: #f5f5f5;
}

.code-content {
  background: white;
  border: 2rpx solid white;
}

.bar-code {
  width: 584rpx;
  height: 126rpx;
  display: block;
  margin: 0 auto;
  margin-top: 40rpx;
}

.pay-number {
  font-size: 32rpx;
  text-align: center;
  margin-top: 30rpx;
}

.code-qr {
  width: 330rpx;
  height: 330rpx;
  display: block;
  margin: 44rpx auto;
}

.balance {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  font-size: 32rpx;
  width: 100%;
  border-top: 2rpx solid #f5f5f5;
}

.balance image {
  width: 34rpx;
  height: 34rpx;
  padding: 10rpx;
  margin-left: 20rpx;
}

.set-psw {
  width: 446rpx;
  line-height: 60rpx;
  color: white;
  font-size: 28rpx;
  background: #41515e;
  border-radius: 30rpx;
  text-align: center;
  margin: 80rpx auto;
}

canvas {
  width: 680rpx;
  height: 200rpx;
  margin: 200rpx auto;
}
