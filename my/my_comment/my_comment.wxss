.head {
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
}

.head  .head-left {
  font-size: 28rpx;
  margin-left: 24rpx;
}

.head .border-cur {
  width: 136rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-right: 24rpx;
}

.scroll {
  height: calc(100vh - 234rpx);
}

.comment-tab {
  margin-top: 16rpx;
  height: 92rpx;
  background: white;
  overflow: hidden;
  border-bottom: 2rpx solid #f6f6f6;
}

.comment-tab > view {
  float: left;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.comment-tab > view > view {
  display: inline-block;
  font-size: 30rpx;
  line-height: 86rpx;
  position: relative;
  border-bottom: 4rpx solid #fff;
}

