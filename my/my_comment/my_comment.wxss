.comment {
  padding: 34rpx 24rpx;
  background: white;
}

.comment .comment-time {
  font-size: 26rpx;
  color: #8d8d8d;
}

.comment .comment-content {
  font-size: 28rpx;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.good-info {
  background: #f8f8f8;
  overflow: hidden;
  margin-top: 50rpx;
}

.good-info > image {
  width: 206rpx;
  height: 206rpx;
  float: left;
}

.good-info > view {
  width: 450rpx;
  height: 206rpx;
  float: left;
  margin-left: 24rpx;
}

.good-info .good-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  height: 76rpx;
  margin-top: 20rpx;
}

.good-info .good-tips {
  font-size: 30rpx;
  margin-top: 50rpx;
}

.good-info .good-tips .cur {
  margin-left: 20rpx;
}

.comment-img {
  overflow: hidden;
  margin-top: 6rpx;
}

.comment-img > view {
  width: 226rpx;
  height: 226rpx;
  background: black;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  float: left;
}

.comment-img > view > image {
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -42rpx;
  margin-top: -42rpx;
}

.comment-img > image {
  width: 226rpx;
  height: 226rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  float: left;
}

.comment-img > image:nth-child(3n) {
  margin-right: 0;
}

.single-img {
  width: 378rpx;
  height: 378rpx;
}

.empty-view {
  height: calc(100vh - 240rpx);
}
