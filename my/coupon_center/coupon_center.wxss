.tab-view {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: calc(100% - 70rpx);
  padding-right: 70rpx;
  background: white;
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
}

.tab-sroll {
  height: 82rpx;
  white-space: nowrap;
}

.tab-sroll .tab-item {
  display: inline-block;
  height: 100%;
  padding: 0 25rpx;
}

.tab-sroll .tab-item text {
  position: relative;
  display: inline-block;
  height: 100%;
  font-size: 28rpx;
  line-height: 82rpx;
  box-sizing: border-box;
  border-bottom: 6rpx solid #fff;
}

