.order-wrap{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.order-wrap scroll-view{
  display: flex;
  flex: 1;
}
.order-head > .imagebg {
  position: relative;
  width: 100%;
  height: 230rpx;
  margin:0;
  
}
.order-head > .imagebg>view {
  width: 100%;
  height: 100%;
  opacity: .6;
}

.order-head > view {
  position: absolute;
  left: 0;
  top: 0;
  width: 690rpx;
  height: 148rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-head > view view {
  font-size: 36rpx;
  color: white;
}
.order-head > view image {
  width: 230rpx;
  height: 140rpx;
  opacity: 0.8;
}

.address-wrap {
  position: relative;
  z-index: 2;
  margin: 0 30rpx;
  border-radius: 10rpx;
  margin-top: -80rpx;
  padding: 54rpx 26rpx;
  background: white;
}

.address-wrap .logistics-info {
  position: relative;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.address-wrap .logistics-info .logo {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.address-wrap .logistics-info view {
  font-size: 28rpx;
  float: left;
  margin-left: 20rpx;
}

.address-wrap .logistics-info .next {
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
}

.address-wrap .address, .self-delivery {
  overflow: hidden;
}

.address > image {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.address > view {
  float: left;
  width: 570rpx;
  margin-left: 20rpx;
}

.address .user-info {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.address .user-info text {
  margin-right: 40rpx;
}

.address .address-detail {
  font-size: 28rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.self-delivery > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.self-delivery > view > view {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 80rpx;
}

.self-delivery .self-left view {
  display: flex;
  margin-left: 16rpx;
}

.self-delivery .self-left image {
  width: 40rpx;
  height: 40rpx;
}

.self-delivery .self-right image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
}

.self-delivery .self-address {
  font-size: 28rpx;
  color: #8d8d8d;
}
.self-delivery .z-address{
  align-items: flex-start;
}
.self-delivery .z-address .self-left{
  flex-shrink: 0;
  line-height: normal;
}
.self-delivery .z-address .self-right{
  line-height: normal;
  margin-left: 15rpx;
}

.collage-detail {
  width: 100%;
  height: 114rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 18rpx;
  background: white;
}

.collage-detail > view {
  display: flex;
  align-items: center;
}

.collage-detail .collage-left image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;
}

.collage-detail .collage-left view {
  font-size: 30rpx;
  margin-left: 28rpx;
}

.collage-detail .collage-right image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

.collage-detail .collage-right view {
  font-size: 30rpx;
  margin-right: 28rpx;
}

.good-wrap {
  width: 100%;
  background: white;
}

.shop-info {
  width: 100%;
  height: 118rpx;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.shop-info .shop-logo {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
}

.shop-info  > view {
  font-size: 30rpx;
  margin-left: 20rpx;
}

.shop-info .shop-next {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.order-good-wrap {
  padding: 10rpx 30rpx;
  background: #fbfbfb;
}

.order-good-wrap > view > view {
  overflow: hidden;
}

.order-good-image {
  width: 180rpx;
  height: 180rpx;
  float: left;
}
.order-good-image image{
  width: 180rpx;
  height: 180rpx;
}

.order-good-info {
  width: 480rpx;
  float: left;
  margin-left: 26rpx;
}

.order-good-name {
  height: 76rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order-good-attr {
  height: auto;
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #8d8d8d;
}

.order-good-tip {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.order-good-num {
  font-size: 24rpx;
}

.refund {
  overflow: hidden;
}

.refund > view {
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  border-radius: 30rpx;
  text-align: center;
  margin: 40rpx 0 20rpx;
  float: right;
  color: #8d8d8d;
  border: 2rpx solid #f0f0f0;
}

.return-integral {
  height: 114rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  background: white;
  border-bottom: 1px solid #f6f6f6;
}

.return-integral .border-cur {
  width: 66rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  text-align: center;
  margin-right: 14rpx;
  border-radius: 4rpx;
}

.operation {
  overflow: hidden;
  background: white;
}

.operation .operation-do {
  position: relative;
  width: 50%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 110rpx;
}

.operation .operation-do:last-child::after {
  position: absolute;
  left: 0;
  top: 50%;
  content: '';
  width: 1px;
  height: 40rpx;
  margin-top: -20rpx;
  background: #f6f6f6;
}

.operation .operation-do image {
  width: 40rpx;
  height: 40rpx;
}

.operation .operation-do view {
  font-size: 30rpx;
  margin-left: 14rpx;
}

.price-bg {
  background: white;
}

.price-wrap {
  padding: 36rpx 0 36rpx 30rpx;
  margin-top: 16rpx;
  background: white;
}

.price-wrap > view {
  overflow: hidden;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  margin-bottom: 28rpx;
}

.price-wrap > view:last-child {
  margin-bottom: 0;
}

.price-wrap .price-left {
  float: left;
}

.price-wrap .price-right {
  float: right;
  margin-right: 20rpx;
}

.actually-pay {
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 110rpx;
  overflow: hidden;
  border-top: 2rpx solid #f0f0f0;
  background: white;
}

.actually-pay > view {
  float: right;
  margin-right: 20rpx;
}

.order-infor {
  padding: 30rpx;
  margin:  16rpx 0;
  background: white;
}

.order-infor .copy {
  display: inline-block;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 116rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-left: 30rpx;
  border: 2rpx solid #f0f0f0;
}

.order-infor > view {
  font-size: 28rpx;
  line-height: 28rpx;
}

.order-infor .order-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}
.order-infor .order-time .info{
  display: flex;
  align-items: center;
}
.order-infor .order-time .info .shop_info{
  display: block;
  max-width: 280rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.order-infor .next{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.logistics {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
  max-height: 100rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f0f0f0;
  background: white;
}

.logistics > view {
  width: 150rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  text-align: center;
  margin: 24rpx 24rpx 24rpx 0;
  border: 1rpx solid #b0b0b0;
}

.board {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
}

.board > view {
  width: 600rpx;
}

.voucher-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 30rpx;
  background: #f5f5f5;
}

.voucher-head .head-left view {
  font-size: 30rpx;
  line-height: 90rpx;
}

.voucher-head .head-left {
  display: flex;
  align-items: center;
}

.voucher-head .head-left image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.voucher-head > image {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx 0;
}

.voucher-content {
  background: white;
  border-top: 2rpx solid white;
  border-bottom: 2rpx solid white;
}

.voucher-content .bar-code {
  width: 500rpx;
  height: 110rpx;
  display: block;
  margin: 0 auto;
  margin-top: 36rpx;
}

.voucher-content > view {
  font-size: 28rpx;
  line-height: 28rpx;
  margin-top: 24rpx;
  text-align: center;
}

.voucher-content .qr-code {
  width: 286rpx;
  height: 286rpx;
  display: block;
  margin: 0 auto;
  margin-top: 38rpx;
}

.cut-line {
  width: 100%;
  height: 50rpx;
  display: block;
}

.voucher-info {
  padding: 0 46rpx 60rpx;
  background: #f5f5f5;
}

.voucher-info text {
  font-size: 26rpx;
  color: #8d8d8d;
}

.voucher-info .title {
  margin-right: 10rpx;
  color: black !important;
}
