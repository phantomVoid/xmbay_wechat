.search-head {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 18rpx;
  box-sizing: border-box;
}

.search-head .search-bg {
  flex: 1;
  height: 62rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  background: #fff;
}

.search-head .search-bg image {
  width: 32rpx;
  height: 32rpx;
}

.search-head .search-bg view {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #8d8d8d;
}

.search-head .after-sale-order {
  font-size: 30rpx;
  line-height: 88rpx;
  width: 164rpx;
  text-align: center;
  color: #8d8d8d;
}

.tab-view {
  display: flex;
  width: 100%;
  overflow: hidden;
  height: 80rpx;
  background: white;
}

.tab-view > view {
  flex: 1;
  width: 20%;
  text-align: center;
  line-height: 74rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-view > view view {
  font-size: 28rpx;
  position: relative;
  border-bottom: 4rpx solid #fff;
}

