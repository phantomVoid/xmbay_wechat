.head {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
  background: #f6f6f6;
}

.order-list {
  margin-top: 170rpx;
  height: calc(100vh - 170rpx);
}

.no-order {
  margin-top: 170rpx;
  height: calc(100vh - 170rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-order > view {
  width: 100%;
}

.no-order image {
  width: 100%;
  height: 260rpx;
}

.no-order .no-order-head {
  font-size: 30rpx;
  text-align: center;
}

.no-order .no-order-content {
  font-size: 26rpx;
  color: #8d8d8d;
  text-align: center;
  margin-top: 10rpx;
}
.order-item .order-item-good > view {
  margin-left: 0;
}

.order-item .order-item-good .file {
  width: 150rpx;
  height: 150rpx;
  float: left;
}

.order-item .order-item-good .file image {
  width: 150rpx;
  height: 150rpx;
}

.order-item .order-item-good .info {
  float: left;
  width: 525rpx;
  margin-left: 24rpx;
}
