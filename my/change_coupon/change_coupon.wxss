.coupon-list {
  margin-bottom: 110rpx;
  border-top: 2rpx solid #f6f6f6;
  border-bottom: 2rpx solid #f6f6f6;
}

.coupon-list > view {
  width: 708rpx;
  height: 200rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 18rpx;
}

.coupon-list > view > image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.coupon-list .coupon-item {
  padding-right: 150rpx;
  height: 100%;
}

.coupon-item .right {
  position: absolute;
  right: 0;
  top: 0;
  width: 150rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-item .left {
  width: 100%;
  height: 200rpx;
  position: relative;
  z-index: 2;
}

.coupon-item .left > view {
  display: flex;
  align-items: center;
  height: 100%;
}

.coupon-item .left .coupon-img {
  width: 140rpx;
  height: 140rpx;
  margin-left: 32rpx;
}

.coupon-item .left .coupon-title {
  font-size: 26rpx;
}

.coupon-item .left .coupon-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 140rpx;
  margin-left: 38rpx;
}

/* .coupon-item .left .coupon-price {
  margin-top: 34rpx;
} */

.coupon-item .gray {
  color: #ccc;
}

.coupon-item .left .coupon-info .favourable-price {
  font-size: 36rpx;
}

.coupon-item .left .coupon-info .off-price {
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  margin-left: 14rpx;
}

.coupon-item .right > view {
  text-align: center;
}

.coupon-item .right .arc {
  display: inline-block;
}

.coupon-item .right > view .opertation {
  font-size: 22rpx;
  line-height: 36rpx;
  color: white;
  width: 130rpx;
  text-align: center;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background: #aaaaaa;
}

.coupon-item .right > view .gray-opertation {
  background: #aaa;
  color: white;
  font-size: 22rpx;
  line-height: 36rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.coupon-item .right .cost {
  font-size: 24rpx;
}

.coupon-item .right .cost > view {
  margin-bottom: 8rpx;
}

.coupon-item .right .cost image {
  width: 30rpx;
  height: 26rpx;
}

.exchange-board {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.exchange-board .exchange-detail {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  max-height: 720rpx;
  min-height: 550rpx;
  background: #f0f0f0;
}

.exchange-board .exchange-detail > image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding: 10rpx;
}

.exchange-board .exchange-detail .exchange-bg {
  position: relative;
  width: 696rpx;
  margin: 70rpx auto 0;
}

.exchange-board .exchange-detail .exchange-bg .exchange-con {
  position: relative;
  /* z-index: 2; */
  height: 250rpx;
}
.exchange-board .exchange-detail .exchange-bg .exchange-goods{
  width: 93%;
  margin: 0 auto;
  overflow: hidden;
  padding-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  background-color: #fff;
}

.exchange-board .exchange-detail .used-good {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.exchange-board .exchange-detail .used-good > image {
  width: 120rpx;
  height: 120rpx;
}

.exchange-info {
  padding-top: 80rpx;
  padding-left: 76rpx;
  color: white;
}

.exchange-info .exchange-price {
  font-size: 50rpx;
}

.exchange-info .exchange-off {
  font-size: 26rpx;
  margin-left: 6rpx;
}

.exchange-fit {
  padding-left: 70rpx;
  font-size: 26rpx;
  color: white;
}

.exchange-detail .used-good {
  /* margin-top: 36rpx; */
}

.exchange-detail .used-tips {
  font-size: 26rpx;
  text-align: center;
  margin-top: 14rpx;
  color: #797e83;
}

.exchange-detail .exchange {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  width: 288rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 40rpx auto 0;
  color: white;
}

.exchange-detail .integral-balance {
  text-align: center;
  margin: 0 auto;
}

.exchange-detail .integral-balance > view {
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 10rpx;
}
.exchange-detail .integral-balance .Integral{
  margin-top: 10rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
  background: white;
}

.footer > view {
  float: left;
  position: relative;
  width: 50%;
}

.footer > view image {
  width: 96rpx;
  height: 96rpx;
  display: block;
  margin: 0 auto;
}

.footer > view view {
  position: absolute;
  font-size: 24rpx;
  color: #858a8e;
  left: 50%;
  margin-left: -24rpx;
  bottom: 6rpx;
}

.empty-view {
  height: calc(100vh - 182rpx)!important;
}