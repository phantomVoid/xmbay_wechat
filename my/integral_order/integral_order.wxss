.order-head > image {
  width: 100%;
  height: 230rpx;
  position: relative;
}

.order-head > view {
  height: 148rpx;
  position: absolute;
  left: 0;
  top: 0;
  width: 690rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-head > view view {
  font-size: 36rpx;
  color: white;
}

.order-head > view image {
  width: 230rpx;
  height: 140rpx;
}

.address-wrap {
  margin: 0 30rpx;
  background: white;
  border-radius: 10rpx;
  margin-top: -80rpx;
  padding: 54rpx 26rpx;
  z-index: 2;
  position: relative;
}

.order-head > .imagebg {
  width: 100%;
  height: 230rpx;
  position: relative;
  margin:0;
  
}
.order-head > .imagebg>view {
  width: 100%;
  height: 100%;
  opacity: .6;
}

.address-wrap .logistics-info {
  overflow: hidden;
  position: relative;
}

.address-wrap .logistics-info .logo {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.address-wrap .logistics-info view {
  font-size: 28rpx;
  float: left;
  margin-left: 20rpx;
}

.address-wrap .logistics-info .next {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -20rpx;
}

.address-wrap .address {
  overflow: hidden;
  margin-top: 40rpx;
}

.address > image {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.address > view {
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  width: 570rpx;
  text-align: left;
  margin-left: 20rpx;
  float: left;
}

.address .user-info {
  font-size: 30rpx;
  font-weight: bold;
}

.address .user-info text {
  margin-right: 40rpx;
}

.address .address-detail {
  font-size: 28rpx;
  line-height: 36rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.self-delivery > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.self-delivery > view > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 80rpx;
}

.self-delivery .self-left view {
  display: flex;
  margin-left: 16rpx;
}

.self-delivery .self-left image {
  width: 40rpx;
  height: 40rpx;
}

.self-delivery .self-right image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 16rpx;
}

.self-delivery .self-address {
  color: #8d8d8d;
  font-size: 28rpx;
  text-align: right;
  display: block;
}

.good-wrap {
  width: 100%;
  background: white;
}

.order-good-wrap {
  margin-top: 10rpx;
  padding: 10rpx 30rpx;
  background: white;
}

.order-good-wrap > view {
  overflow: hidden;
}

.order-good-image {
  width: 180rpx;
  height: 180rpx;
  float: left;
}

.order-good-info {
  width: 480rpx;
  float: left;
  margin-left: 26rpx;
}

.order-good-name {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order-good-attr {
  color: #8d8d8d;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.order-good-tip {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 40rpx;
  
}

.order-good-num {
  font-size: 24rpx;
}

.actually-pay {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 110rpx;
  border-top: 2rpx solid #f0f0f0;
  background: white;
  overflow: hidden;
}

.actually-pay > view {
  float: right;
  margin-right: 20rpx;
}

.order-infor {
  background: white;
  padding: 30rpx;
  margin-top: 16rpx;
  margin-bottom: 116rpx;
}

.order-infor .copy {
  display: inline-block;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 116rpx;
  text-align: center;
  border: 2rpx solid #f0f0f0;
  border-radius: 30rpx;
  margin-left: 30rpx;
}

.order-infor > view {
  font-size: 28rpx;
  line-height: 28rpx;
}

.order-infor .order-time {
  margin-top: 30rpx;
}

.logistics {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #f0f0f0;
  z-index: 2;
  display: flex;
  align-items: center;
  background: white;
  justify-content: flex-end;
}

.logistics > view {
  width: 170rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border: 2rpx solid #b0b0b0;
  border-radius: 30rpx;
  text-align: center;
  margin-right: 24rpx;
}
