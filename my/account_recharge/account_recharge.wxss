.swiper {
  width: 100%;
  height: 360rpx;
  background: white;
}

.swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
  transform: scaleX(0.9) scaleY(0.8);
  transition: all 0.3s ease;
}

.swiper-item.scale {
  transform: scaleX(0.98) scaleY(0.9);
  transition: all 0.3s ease;
}

.swiper-item > image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.swiper-item > view {
  position: relative;
  z-index: 2;
  margin-left: 40rpx;
  color: white;
}

.swiper-item .charge-money {
  padding-top: 138rpx;
}

.swiper-item .exact-money {
  font-size: 64rpx;
  line-height: 64rpx;
}

.swiper-item .exact-unit {
  font-size: 30rpx;
}

.swiper-item .charge-tips {
  display: inline-block;
  font-size: 26rpx;
  line-height: 55rpx;
  padding: 0 40rpx 0 20rpx;
  margin-top: 36rpx;
  background: rgba(0, 0, 0, 0.1);
}

.scroll {
  width: 100%;
  height: 94rpx;
  background: white;
  white-space: nowrap;
}

.scroll .scroll-item {
  display: inline-block;
  width: 20%;
  text-align: center;
  color: #8d8d8d;
}

.scroll .scroll-item text {
  font-size: 26rpx;
  line-height: 90rpx;
  display: inline-block;
  position: relative;
  border-bottom: 4rpx solid #fff;
}

.scroll .select {
  color: black;
}

