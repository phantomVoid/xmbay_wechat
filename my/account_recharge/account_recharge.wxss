.pay-way {
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  height: 88rpx;
  margin-top: 18rpx;
}

.pay-way .pay-left {
  font-size: 32rpx;
}

.pay-way .pay-right {
  display: flex;
  align-items: center;
}

.pay-way .pay-right text {
  font-size: 26rpx;
  color: #8d8d8d;
}

.pay-way .pay-right image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.wx-pay {
  height: 116rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
}

.wx-pay > image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.wx-pay > view {
  display: flex;
  align-items: center;
}

.wx-pay > view view {
  font-size: 30rpx;
  margin-left: 36rpx;
}

.wx-pay > view image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 36rpx;
}
.wx-pay > .imager {
  font-size: 44rpx;
  margin-right:36rpx;
}

.overpayment {
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  color: white;
}

.charge-info {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.charge-info > view {
  position: relative;
  width: 624rpx;
  height: 780rpx;
  border-radius: 10rpx;
  background: white;
}

.charge-info .title {
  font-size: 36rpx;
  margin-top: 44rpx;
  font-weight: bold;
  text-align: center;
}

.charge-info .content {
  font-size: 28rpx;
  width: 490rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}

.charge-info  > view .close {
  position: absolute;
  right: 0;
  top: 0;
  width: 80rpx;
  height: 80rpx;
}
