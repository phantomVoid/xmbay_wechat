.wrap{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.tab-view {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 80rpx;
  background: white;
  box-shadow: 0 0 5rpx 2rpx rgba(150, 150, 150, 0.1);
}

.tab-view > view {
  width: 25%;
  height: 100%;
  text-align: center;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-view > view view {
  position: relative;
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border-bottom: 6rpx solid #fff;
}

