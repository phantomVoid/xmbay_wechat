page {
  background: white;
}

.head {
  font-size: 32rpx;
  text-align: center;
  margin-top: 60rpx;
}

.phone {
  margin-top: 20rpx;
  font-size: 32rpx;
  text-align: center;
}

.verification {
  width: 646rpx;
  height: 100rpx;
  margin: 60rpx auto 0;
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 6rpx;
}

.verification image {
  width: 38rpx;
  height: 38rpx;
  margin-left: 50rpx;
}

.verification input {
  font-size: 30rpx;
  width: 300rpx;
  margin-left: 30rpx;
}

.verification view {
  width: 226rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
  color: #333;
  position: relative;
}

.verification view::after {
  position: absolute;
  content: '';
  width: 2rpx;
  height: 28rpx;
  top: 50%;
  left: 0;
  margin-top: -14rpx;
  background: #8d8d8d;
}

.next-step {
  width: 646rpx;
  font-size: 30rpx;
  color: white;
  line-height: 88rpx;
  border-radius: 6rpx;
  background: #d8d5d5;
  margin: 50rpx auto 0;
  text-align: center;
}
