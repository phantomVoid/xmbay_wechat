page {
  background: white;
}

.balance {
  width: 684rpx;
  height: 426rpx;
  margin: 40rpx auto 0;
  position: relative;
}

.balance > image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}

.balance > view {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.balance > view > image {
  position: absolute;
  right: 0;
  top: 100rpx;
  width: 214rpx;
  height: 52rpx;
}

.balance > view > view {
  margin-left: 50rpx;
  color: white;
}

.balance-title {
  font-size: 30rpx;
  line-height: 30rpx;
  margin-top: 110rpx;
}

.balance-money {
  font-size: 60rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
}

.balance-tip {
  font-size: 26rpx;
  line-height: 26rpx;
  margin-top: 60rpx;
}

.charge {
  width: 680rpx;
  line-height: 82rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 60rpx auto 0;
  border-radius: 10rpx;
  border: 1px solid transparent;
}
