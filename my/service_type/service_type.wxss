.good-wrap {
  background: white;
  padding: 10rpx 24rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.good-wrap > image {
  width: 180rpx;
  height: 180rpx;
  float: left;
}

.good-wrap > view {
  float: left;
  width: 490rpx;
  margin-left: 26rpx;
}

.good-wrap .good-name {
  font-size: 28rpx;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 4rpx;
}

.good-wrap .good-attr {
  font-size: 26rpx;
  color: #8d8d8d;
  margin-top: 14rpx;
}

.operation {
  width: 100%;
  height: 138rpx;
  background: white;
  overflow: hidden;
  position: relative;
  margin-bottom: 2rpx;
}

.operation .logo {
  width: 46rpx;
  height: 46rpx;
  float: left;
  margin-top: 28rpx;
  margin-left: 24rpx;
}
.operation .logo>image{
  width: 46rpx;
  height: 46rpx;
}

.operation > view {
  float: left;
  margin-left: 36rpx;
}

.operation > view .head {
  font-size: 30rpx;
  margin-top: 30rpx;
}

.operation > view .content {
  font-size: 28rpx;
  margin-top: 8rpx;
  color: #8d8d8d;
}

.operation .next {
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  top: 50%;
  margin-top: -11rpx;
  right: 24rpx;
}
