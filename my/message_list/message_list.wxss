.logistics-list {
  padding: 90rpx 30rpx 0;
}

.logistics-list > view {
  margin-top: 30rpx;
  padding: 0 24rpx 16rpx;
  background: white;
}

.head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.head .title {
  width: 460rpx;
  font-size: 30rpx;
  /* line-height: 1; */
  margin: 30rpx 0 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.head .time {
  font-size: 26rpx;
  color: #8d8d8d;
  width: 160rpx;
}

.content {
  overflow: hidden;
}

.content > image {
  width: 170rpx;
  height: 170rpx;
  float: left;
}

.content > view {
  padding: 20rpx 22rpx;
  background: #fafafa;
  float: left;
  min-height: 130rpx;
}

.content .name {
  width: 420rpx;
  font-size: 28rpx;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}

.content .number {
  font-size: 26rpx;
  line-height: 1;
  margin-top: 30rpx;
  color: #8d8d8d;
}

.discounts-list {
  padding: 90rpx 30rpx 0;
}

.discounts-list > view {
  margin-top: 26rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  background: white;
}

.discounts-list .discounts-head {
  font-size: 32rpx;
  padding: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.discounts-list .discount-file {
  width: 100%;
  height: 278rpx;
}

.discounts-list > view > view {
  position: relative;
}

.discounts-list .finished {
  width: 100%;
  height: 278rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.discounts-list .finished {
  font-size: 36rpx;
  color: white;
}

.discounts-list .discounts-title {
  font-size: 28rpx;
  color: #6e7578;
  border-bottom: 2rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.discounts-list .discounts-tip {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 84rpx;
  color: #6e7578;
}

.discounts-list .discounts-look {
  display: flex;
  align-items: center;
}

.discounts-list .discounts-look image {
  width: 12rpx;
  height: 22rpx;
  margin-left: 20rpx;
}

.empty-view {
  height: calc(100vh - 90rpx);
}
