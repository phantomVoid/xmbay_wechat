.tab-list {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100vw;
  height: 90rpx;
  overflow: hidden;
  background: white;
}

.tab-list > view {
  float: left;
  width: 33%;
  text-align: center;
}

.tab-list > view text {
  display: inline-block;
  font-size: 28rpx;
  line-height: 86rpx;
  position: relative;
  box-sizing: border-box;
  border-bottom: 4rpx solid #fff;
}

