.wrap {
  padding: 90rpx 24rpx 10rpx;
}

.red-pocket {
  background: white;
  height: 204rpx;
  margin-top: 14rpx;
  position: relative;
}

.red-pocket .pocket-logo {
  width: 170rpx;
  height: 100%;
  float: left;
}

.red-pocket .pocket-logo image {
  width: 92rpx;
  height: 104rpx;
  display: block;
  margin: 0 auto;
  padding-top: 38rpx;
}

.red-pocket .pocket-logo  view {
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx 10rpx 0 10rpx;
}

.red-pocket > image {
  width: 2rpx;
  height: 142rpx;
  float: left;
  margin-top: 30rpx;
}

.red-pocket .pocket-tip {
  float: left;
  margin-left: 40rpx;
}

.red-pocket .pocket-envir {
  font-size: 28rpx;
  margin-top: 50rpx;
}

.red-pocket .pocket-time {
  font-size: 24rpx;
  color: #8d8d8d;
  margin-top: 20rpx;
}

.red-pocket .price {
  position: absolute;
  right: 60rpx;
  top: 40rpx;
}

.gray {
  color: #8d8d8d !important;
}

.logo {
  width: 72rpx !important;
  height: 72rpx !important;
  position: absolute;
  right: 200rpx;
  top: 0;
}
.no-order {
  height: calc(100vh - 170rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-order > view {
  width: 100%;
}

.no-order image {
  width: 100%;
  height: 260rpx;
}

.no-order .no-order-head {
  font-size: 30rpx;
  text-align: center;
}

.no-order .no-order-content {
  font-size: 26rpx;
  color: #8d8d8d;
  text-align: center;
  margin-top: 10rpx;
}