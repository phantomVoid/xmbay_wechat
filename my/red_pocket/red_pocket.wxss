.tab-list {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0;
  background: white;
  z-index: 2;
  box-shadow: 0px 4rpx 1rpx 0 rgba(0, 0, 0, 0.1);
}

.tab-list > view {
  float: left;
  width: 33%;
  text-align: center;
}

.tab-list > view text {
  display: inline-block;
  font-size: 30rpx;
  line-height: 90rpx;
  position: relative;
  border-bottom: 4rpx solid #fff;
}

