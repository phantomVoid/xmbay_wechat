.logo {
  width: 100%;
  height: 446rpx;
}

.content {
  width: 698rpx;
  background: white;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: -136rpx;
  position: relative;
  z-index: 1;
}

.content > view {
  padding: 44rpx;
}

.rule {
  font-size: 28rpx;
  margin-top: 30rpx;
}

.discount-head {
  display: flex;
  margin-top: 20rpx;
}

.discount-head > view {
  font-size: 28rpx;
  line-height: 78rpx;
  text-align: center;
  width: 50%;
  color: #8d8d8d;
  border: 2rpx solid #8d8d8d;
}

.discount-head > view:nth-child(2n) {
  border-left: none;
}

.discount-content {
  display: flex;
}

.discount-content > view {
  font-size: 28rpx;
  line-height: 78rpx;
  text-align: center;
  width: 50%;
  color: #fe9f2f;
  border-left: 2rpx solid #8d8d8d;
  border-bottom: 2rpx solid #8d8d8d;
  border-right: 2rpx solid #8d8d8d;
}

.discount-content > view:nth-child(2n) {
  border-left: none;
}
