.tab-head {
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0px 4rpx 4rpx #e0e0e0;
  position: fixed;
  left: 0;
  top: 0;
}

.tab-head > view {
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  float: left;
}

.tab-head .triangle {
  width: 0;
  height: 0;
  margin-left: 4rpx;
  vertical-align: middle;
  border-top: 8rpx solid rgb(174, 174, 174);
  border-right: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
}

.triangle.cur {
  border-top: 8rpx solid transparent;
}

.collect-list {
  /* margin-top: 10rpx;
  padding-top: 80rpx; */
}

.collect-list > view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 280rpx;
  overflow: hidden;
  background: white;
}

.collect-list > view > image {
  width: 250rpx;
  height: 250rpx;
  flex-shrink: 0;
}

.collect-list > view > view {
  position: relative;
  height: 100%;
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f6f6f6;
}

.collect-list > view:last-child > view {
  border: none;
}

.collect-list > view .good-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  line-height: 36rpx;
  height: 72rpx;
}

.collect-list > view .price {
  line-height: 1;
  margin-top: 40rpx;
}

.collect-list > view .depreciate-info {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.collect-list > view .depreciate-info > .boder {
  margin-top: 30rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  border: 2rpx solid #e7e7e7;
  text-align: center;
  border-radius: 30rpx;
}

.collect-list > view .depreciate-info > .icon_cart {
  position: absolute;
  right: 40rpx;
  bottom: 25rpx;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #f6f6f6;
}

.collect-list > view .depreciate-info > .icon_cart image {
  width: 56rpx;
  height: 56rpx;
}

.inventory-board {
  position: fixed;
  top: 80rpx;
  left: 0;
  width: 100%;
  height: calc(100vh - 80rpx);
  background: rgba(0, 0, 0, 0.3);
}

.inventory-board > view {
  width: 100%;
  height: 320rpx;
  overflow: auto;
}

.inventory-board > view > view {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
}

.inventory-board > view > view view {
  font-size: 28rpx;
  line-height: 80rpx;
  margin-left: 46rpx;
}

.inventory-board > view > view image {
  width: 28rpx;
  height: 20rpx;
  margin-right: 46rpx;
}

.limit {
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 0 6rpx;
  color: white;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.group {
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 0 6rpx;
  color: white;
  margin-right: 10rpx;
  border-radius: 20rpx;
  border-top-right-radius: 0;
}
.shop_price{
  font-size: 24rpx;
  margin-left: 15rpx;
  text-decoration: line-through;
  color: #ccc;
}

.collect-list > view .depreciate-info > .invalid {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  padding: 10rpx 18rpx;
  border-radius: 30rpx;
  background-color: #e3e3e3;
}

.invalid .icon{
  width: 23rpx;
  height: 23rpx;
}
.invalid text{
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #999;
}
.invalid_type{
  background-color: #f6f6f6;
}
.invalid_type .good-name {
  color: #999fa5;
}

