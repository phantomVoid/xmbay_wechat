page {
  overflow-x: hidden;
}

.wrap > video {
  width: 100%;
  height: 750rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.swiper-head {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.swiper .video-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper .video-wrap > image {
  width: 84rpx;
  height: 84rpx;
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper image {
  width: 100%;
  height: 100%;
}


.banner-num {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: white;
  width: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50rpx;
}

.banner-num text:first-child {
  font-size: 30rpx;
}

.banner-num text:last-child {
  font-size: 26rpx;
}

.good-info {
  padding: 30rpx;
  background: white;
}

.good-info .good-name {
  font-size: 30rpx;
  font-weight: bold;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.good-info .good-tips {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 20rpx;
}

.good-tips .integral {
  font-size: 40rpx;
  padding-right: 8rpx
}

.good-tips .integral-unit {
  font-size: 28rpx;
}

.good-tips .exchange-num {
  font-size: 26rpx;
  color: #8d8d8d;
}

.good-intro {
  background: white;
  display: flex;
  align-items: center;
  height: 90rpx;
  margin-top: 18rpx;
}

.good-intro .line {
  width: 6rpx;
  height: 34rpx;
  margin-left: 30rpx;
}

.good-intro .good-intro-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 30rpx;
}

.exchange {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 34rpx;
  line-height: 100rpx;
  color: white;
}

.wrap {
  padding-bottom: 100rpx;
}
