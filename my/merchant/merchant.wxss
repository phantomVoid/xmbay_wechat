.info {
  padding-left: 24rpx;
  background: white;
}

.info > view {
  height: 100rpx;
  position: relative;
  border-bottom: 2rpx solid #f6f6f6;
}

.info > view > view {
  font-size: 30rpx;
  line-height: 100rpx;
  float: left;
}

.info > view input {
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
  float: left;
  margin-left: 40rpx;
  width: 500rpx;
}

.info > view .content {
  margin-left: 40rpx;
}

.info > view image {
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 24rpx;
  top: 50%;
  margin-top: -11rpx;
}

.tips {
  margin-top: 30rpx;
  font-size: 28rpx;
  margin-left: 26rpx;
  color: #8d8d8d;
}

.set-up {
  width: 668rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background: #d8d5d5;
  color: white;
  font-size: 30rpx;
  line-height: 84rpx;
  text-align: center;
  margin-top: 70rpx;
}
.service-phone{
  position: relative;
  width: 700rpx;
  margin: 0 auto;
  margin-top: 70rpx;
}
.service-phone .con{
  width: 694rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  font-size: 26rpx;
  padding: 30rpx 0 30rpx 30rpx;
  box-sizing: border-box;
  color: #464646;
  box-shadow: 0 0 30rpx 0 rgba(177, 177, 177, .2);
}
.service-phone image{
  position: absolute;
  right: -2rpx;
  top: 20rpx;
  width: 180rpx;
  height: 57rpx;
}
.form_button{
  position: relative;
}
.button{
  text-align: left;
  padding: 0;
  margin: 0;
  background: transparent;
}